txtColor = header_icons_color
txtColorSeo = header_icons_color
	
.flex_container
	display flex
	flex-direction column
	width 100% 
	padding 0 10px 
	background grey_texture 
	@media phone
		padding 0 10px
		margin-bottom 0
.row
	&.about-this  
		background: dark_green_texture !important
		@media phone
			display none
.about-this-site
	color txtColor 
	font-size 13px
	padding 20px 0 10px
	&_seo
		position relative
		overflow hidden
		color txtColorSeo
		font-size 12px
		line-height 15px
		padding 26px 0 30px
		.wrap
			width 100% !important
		p
			margin 0
			color: #7bc6d4
	a
		color txtColor
		text-decoration none
		&:hover
			color txtColor
			text-decoration underline
	b, strong
		font-weight normal
.js-seo
	overflow hidden
	height 0
	&.is-open
		overflow auto 
		height auto
 