+e.left.item-left__mod
    .card__left-side
        .card__image 
            if data.thumb
                a(href="#")
                    img(src= data.thumb).photo
        +b.rating.value-size_big
            +e.value.value 4.9
            +e.stars 
                +e.stars-bg
                +e.stars-overlay(style="width: 80%;") 
        +b.card__testimonials 
            a(href="", title="") 10 отзывов
            a(href='#').card__info

if data.badge
    +b.badge-label(class="badge-label_background_#{data.badge.background}")
        if data.badge.html
            != data.badge.html
        //- else if data.badge.title
        //-     = data.badge.title
        +e("span").arrow: span

+e.middle 
    +b.main-title 
        +e("a").link(href="#", alt=data.title)=data.title
        if data.clinic
            +e("span").clinic= data.clinic.name
        if data.meta
            +e("span").special= data.meta.value
        +b("ul").about
            +e("li").item= data.about

+e.right
    +b.right-info
        .benefit__wrap
            if data.benefit
                +e("p").benefit= data.benefit
            if data.timerBadge
                +e("p").benefit.benefit__mod= data.timerBadge.html

        if data.price
            +b.price
                if data.price.old
                    +e.old= data.price.old + data.price.currency
                if data.price.value
                    +e.new= data.price.value
                    | &nbsp; #{data.price.currency}
