.logo
    float left
    position relative
    &.visible-xs   
        margin-top 3px
        margin-right 20px
    a
        text-decoration: none
        white-space: nowrap
        font-size: 0
    &__image
        display: inline-block
        vertical-align: middle
        margin-right: 21px
        @media phone
            margin-right 8px
    &__text
        font-size: 16px
        font-weight: 700
        text-transform: uppercase
        color: #00829b
        display: inline-block
        vertical-align: middle
        span
            color: #35bfae 