.logo
    float left
    position relative
    font-size: 0
    @media phone
        width: 65px
    &.visible-xs   
        margin-top 3px
        margin-right 20px
    a
        text-decoration: none
        white-space: nowrap
        font-size: 0
        display: block
    &__image
        display: inline-block
        vertical-align: middle
        margin-right: 21px
        @media phone
            margin-right 8px
            max-width: 100%
            height: auto !important
    &__text
        font-size: 16px
        font-weight: 700
        text-transform: uppercase
        color: #00829b
        display: inline-block
        vertical-align: middle
        span
            color: #35bfae 