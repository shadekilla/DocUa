.search-result
  .livesearch.top-list
    position absolute
    right 0
    left 0
    // top 100%
    z-index 12
    background-color: white
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.25)
    width 100% !important

  // .livesearch li:last-child
  //   padding-bottom 7px

  .more-toggle
    position relative
    display block
    border-top 1px dashed rgba(0,130,155,.31)
    background-color #eff0f0
    height 50px
    line-height 50px
    &__link 
      display inline-block
      width 50% 
      background none
      padding 0 
      top 0
      font-size 16px 
      font-weight bold
      color blue_base
      text-decoration underline
      &:hover
        text-decoration none
      .more_link
        position relative
        padding-right 26px 
        &:after
          content ""
          position absolute
          top 4px
          right 0
          sprite($arrow_right_green) 
    &__found
      display inline-block
      width 50% 
      padding-left 25px 
      color light_blue_text
      font-size 16px
      text-align left
  .specialty.article-list-item__date 
    margin-left 50px
    @media only screen and (max-width: 768px)
       padding 0
       line-height 1  

.container-menu
  .livesearch.top-list
    right -1px