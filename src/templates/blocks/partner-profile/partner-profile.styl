.partner-block
    margin 20px 0  40px  0
    background-color: white
    border-radius 3px
    box-shadow 0 2px 4px rgba(0, 64, 76, 0.19)
    &__header
        background-color #1d89a0
        border-bottom 1px solid #1d89a0
        border-radius 3px 3px 0 0  
        line-height 40px
        color #fff
        padding-left 40px
        font-size 15px
    &__content
        border-bottom 1px solid rgba(0, 130, 155, 0.32)
        border-left 1px solid rgba(0, 130, 155, 0.32)
        border-right 1px solid rgba(0, 130, 155, 0.32)
 

// partner-profile_vidjets
.vidjets-block
    display inline-flex
    flex-flow: row wrap;
    width 100% 
    &__item
        position relative
        width 33.333%
        height 186px  
        border-right 1px dashed rgba(29,137,160,.45)  
        box-sizing border-box
        text-align center
        transition all 0.3s
        outline none
          
        &:nth-child(3n)
            border-right none
        &:nth-child(-n+3)
            border-bottom 1px dashed rgba(29,137,160,.45)
        &:hover
            background green_base
        &:hover .vidjets-block__text
            color #FFF 
        &:hover .vidjet-doctor
            &:before
                background url('i/icons/vidjet-doctor_hover.png')  no-repeat
        &:hover .vidjet-btn
            &:before
                background url('i/icons/vidjet-btn_hover.png')  no-repeat
        &:hover .vidjet-clinic
            &:before
                background url('i/icons/vidjet-clinic_hover.png')  no-repeat
        // &:hover .vidjets-doctors
        //     &:before 
        //         background url('i/icons/vidjets-doctors_hover.png')  no-repeat
        // &:hover .vidjets-clinics
        //     &:before
        //         background url('i/icons/vidjets-clinics_hover.png')  no-repeat
        &:hover .vidjet-search
            &:before
                background url('i/icons/vidjet-search_hover.png')  no-repeat
                
     
    &__link
        display block
        width 100%
        height 100%
        text-decoration none
        vertical-align middle
        &:focus
            text-decoration none
            outline none 
    &__text
        display block
        color #1d89a0
        font-size 22px
        font-weight 700
        margin-top 20px
        
        
    &__picture
        display block
        &:before
            content ''
            display block
            margin 0 auto
            padding-top 20px 
        &.vidjet-btn
            padding-top 53px
            &:before
                background url('i/icons/vidjet-btn.png')  no-repeat
                width 153px
                height 53px
        &.vidjet-doctor
            padding-top 40px
            &:before
                background url('i/icons/vidjet-doctor.png')  no-repeat
                width 146px
                height 66px
        &.vidjet-clinic
            padding-top 40px
            &:before
                background url('i/icons/vidjet-clinic.png')  no-repeat
                width 146px
                height 66px
        &.vidjets-doctors
            padding-top 40px
            &:before
                background url('i/icons/vidjets-doctors.png')  no-repeat
                width 153px
                height 74px
        &.vidjets-clinics
            padding-top 40px
            &:before
                background url('i/icons/vidjets-clinics.png')  no-repeat
                width 149px
                height 70px
        &.vidjet-search
            padding-top 64px
            &:before
                background url('i/icons/vidjet-search.png')  no-repeat
                width 215px
                height 46px
    
    