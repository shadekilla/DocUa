.card__mod
    margin-bottom 0

.small-card__action-mod
    span.orange-light
        background-color #ffc02a
        &:before
            border-right: 2px solid #ffc02a
        &:after
            border-color: transparent transparent transparent #ffc02a
    
    
.price-item__mod
    padding 20px 20px 10px 20px 
    cursor pointer
    
    // border-top 1px solid #c0d2d6
    &:first-child
        border-top none
    &:hover
        background-color #e5f2f5
        z-index 2
    &:hover .btn-hide
        display inline-block
        margin-left 20px
    &:hover .row-in-price__mod:before
        background-color #35bfae
    &:hover .diagnostic-line
        background-color transparent 
    .diagnostic-line
        width 100%
        height 1px
        background-color #c0d2d6
        margin-top -20px 
        margin-bottom 10px
    .btn-hide
        display none
        vertical-align middle
    .row-price__mod
        padding 0 0 0 20px
        &:hover
            background none
    .block-sevices__list-mod
        
        .row-in-price__mod
            border-bottom none
            &:hover:before
                background-color none 
.block-services__title-mod
    padding 0 
    margin 0 20px
    cursor default
    border-top 1px solid #c0d2d6
    strong
        padding 13px 0 13px 0px 
              
.diagnostic-reviews
    
    background-color #fff9e9
    padding 20px 0 
    &__numder
        color #00829b
        font-size 48px
        font-weight 700
    span
        font-size 14px
        color #5e6e71 
        padding-bottom 15px 
    &__left-side
        position relative
        text-align center
        border-right 1px dotted #c0d2d6 
        .likebox-diagnostic
            &:after
                content ''
                display table
                clear both
            *zoom 1
            display inline-block
            margin-left 0
    .likebox-block
        line-height 68px
        .like-box__like
            vertical-align middle
            &:before
                content ''
                display inline-block
                width 21px
                height 24px
                background-image url('i/sprites-general.png')
                background-position -138px -152px
                margin-right 5px
        .like-box__dislike
            vertical-align middle
            &:before
                content ''
                display inline-block
                width 21px
                height 24px
                background-image url('i/sprites-general.png')
                background-position -96px -152px
                margin-right 5px
        .like-box__votes
            font-size 22px
            margin 2px 0 0 5px
            
        
    &__right-side
        text-align center
    
    .reviews-info
        display inline-block
        &__icon
            display inline-block
            vertical-align middle
            width 17px
            height 17px
            background url('i/question-icon.png') no-repeat
            margin-right 6px
        &__link
            text-decoration none
            border-bottom 1px dotted 
            color #5e6e71
            
.reviews-list__mod
    .reviews-list__content
        padding-right 0


        