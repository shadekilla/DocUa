.likebox
    position relative
    margin-left 9%
    font-size 0
    @media screen and (max-width: 1200px)
        margin-left 4%
    @media phone
        margin-left 0
    >*
        display inline-block
    &_centered
        text-align center
        .likebox
            &__like
            &__dislike
                margin 0 5px
    &__votes
        font-weight bold
        font-size 22px
        line-height 26px
        padding 0 0 3px 25px
    &__like
        right 61px
        .likebox__votes
            color green_base
            &:before
                content ''
                position absolute
                left 0
                top 0
                sprite($like)
    &__dislike
        right 0px
        .likebox__votes
            color #ff5858
            &:before
                content ''
                position absolute
                left 0
                top 3px
                sprite($not_like)
    &__like
    &__dislike
        position absolute
        top 0
        /*margin 0 19px 0 0*/
        height 26px
        input
            position absolute
            top 0
            left 0
            margin 0
            visibility hidden
        input:checked+span
            opacity 1
        span
            display inline-block
            vertical-align middle
            cursor pointer
            padding 3px 0
            width 16px
            height 25px
            opacity .5
            transition opacity .1s ease
            &:hover
                opacity .75
    &__label
        float left
        text-align left
        cursor default
        margin-top 1px
        font-size 14px
        line-height 1.4
        margin-right 5px

.like-box
    white-space: nowrap
    font-size: 0
    text-align: center
    &__like
    &__dislike
        padding: 0 0 0 20px 
        min-height: 19px
        font-size: 17px
        font-weight: 700
        line-height: 19px
        position: relative
        margin: 0 5px 
        display: inline-block
        vertical-align: top
        &:before
            content: ""
            position: absolute
            left: 0
            background-position: center
            background-repeat: no-repeat
            width: 18px
            height: 19px
    &__like
        color: green_base
        &:before
            top: -2px
            background-image: url("i/icons/like-box-like.png")
    &__dislike
        color: #ff5858
        &:before
            top: 1px
            background-image: url("i/icons/like-box-dislike.png")