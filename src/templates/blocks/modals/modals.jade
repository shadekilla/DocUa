mixin modal(name, classes, dialogClasses)
    if modals.indexOf(name) != -1
        .modal.fade(id=name, class=classes, aria-hidden="true", role="dialog", tabindex="-1")
            .modal-dialog(class=dialogClasses)
                .modal-content
                    block

