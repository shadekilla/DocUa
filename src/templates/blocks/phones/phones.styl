.phones
    position: relative
    display inline-block
    margin-right: 25px
    height: 28px
    // float: left
    font-size: 12px
    line-height: 1.2
    color: #b1b1b1
    font-weight: bold
    white-space: nowrap
    @media only screen and (max-width: 800px)
        margin-right 0 
        // float right 
    &__current
        display: inline-block
        vertical-align: middle
        margin: 0 6px 0 0
        text-decoration: none
        color: blue_base
        transition: color .2s ease
        font-size 16px 
        font-weight normal 
        border-bottom 1px dotted
        transition all .2s ease-in-out
        &:hover
            color blue_select 
            border-bottom-color transparent
    &__dropdown
        display inline-block
        @media only screen and (max-width: 1200px)
            a
                display none
        &:hover
            .phones__list
                display block
    &__item
        display: inline-block
        margin-right: 5px
        margin-top: 1px
        text-decoration: none
        vertical-align: middle
        &.phones__item_life,
        &.phones__item_mts,
        &.phones__item_kyivstar,
        &.phones__item_civic
            background-repeat no-repeat

        &.phones__item_life 
            background-image url("/i/icons/life-logo.png")

        &.phones__item_mts
            background-image url("/i/icons/mts-logo.png")

        &.phones__item_kyivstar
            background-image url("/i/icons/kyivstar-logo.png")
            
        &.phones__item_civic
            background-image url("/i/icons/callback_icon.png")
            
    &__item-icon
        display: inline-block
        width: 19px
        height: 19px
        background-size: 63px 21px
        background-repeat: no-repeat
    &__item-value
        color: blue_base
        transition: all .2s ease
        display: block
        margin-top: 2px
        font-weight normal
        font-size 15px  
    &__toggle
        position relative
        display: inline-block
        vertical-align middle
        width: 20px
        height: 20px
        &:after
            content ""
            position absolute
            left: 5px
            top: 9px
            vertical-align: middle
            border-width: 4px
            border-style: solid
            border-color: #0089d1 transparent transparent
    &__toggle_open
        &.phones__toggle
            &:after
                content ""
                position absolute
                left: 5px
                top: 4px
                vertical-align: middle
                border-width: 4px
                border-style: solid
                border-color: transparent transparent #0089d1
    &__list
        display: none
        position: absolute
        top: 100%
        margin-top: -5px
        padding: 5px 0
        right: 0
        width: 190px 
        border 1px solid #ccc
        border-radius 3px
        background #fff
        box-shadow 0 3px 4px rgba(0,0,0,.1)
        background-clip padding-box
        // @media only screen and (max-width: 1200px)
        //     right 20px
    &__list_block
        display block !important
    &__list-item
        transition all .2s ease-in-out
        &:last-child
            .phones__item_civic
                text-align left
        .phones__item
            display: block
            float: none
            overflow: hidden
            margin: 0
            padding: 5px 15px
            &.phones__item_hover
                background-color #deeff2
            &.phones__item_life 
                background-position 10px
            &.phones__item_mts
                background-position 10px
            &.phones__item_kyivstar
                background-position 10px
            &.phones__item_civic
                background-position 10px
        .phones__item-icon
            float: left
            margin-right: 10px
        &:hover
            background #deeff2
            .phones__item-value
                color blue_select 
    &__item_hover
        .phones__item-value
            color blue_select 

.phones_mobile
    &.phones
        float right
    text-align right
    span
        position relative
        display inline-block
        padding-left 25px 
        line-height 1.5
        color blue_base
        font-size 14px 
        &:before
            content ""
            position absolute
            top 1px
            left 0
            width 19px
            height 19px
            background-image url(i/icons/phone-icon-new.png)
            background-repeat no-repeat
            background-position initial
