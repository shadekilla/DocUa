.comment-quotes
    position relative
    overflow hidden
    @media phone
        margin-bottom 20px
    &__header
        padding 0
        list-style none
        @media phone
            min-height 80px
            white-space nowrap
            -webkit-overflow-scrolling touch
            text-align center
    &__item
        position relative
        display inline-block
        text-align center
        cursor pointer
        padding: 0 0 37px 
        .owl-carousel &
            display block
        @media phone
            min-width 100px
            height 100%
            padding: 10px 0 
        img
            apply-grayscale()
            border: 1px solid rgba(198, 221, 226, 0.9)
            border-radius: 3px
            background-color: white
            max-width: 100%
            @media tablet
                transform scale(0.8)
            @media phone
                height 100%
                transform scale(0.7)
        &.active
            img
                -webkit-filter none
                filter none
            &:before
                content " "
                position absolute
                top: 100%
                left: 60%
                margin -14px 0 0 -9px
                border-style: solid
                border-width: 0 18px 14px 0
                border-color: transparent transparent #e5f2f5
                z-index 1
    &__content
        padding 38px
        background-color: #e5f2f5
        border-radius: 5px
        font-size: 0
        @media phone
            height auto
        &:before
            content none
        &:after
            content ""
            display inline-block
            vertical-align middle
            height 100%
    &__pane
        display none
        font-size: 15px
        &.active 
            display: block			
    .owl
        &-wrapper
            @media phone
                text-align left
            &-outer
                overflow visible
        &-item
            @media phone
                height 100px
                float none
                display inline-block
        &-controls
            @media phone
                display block !important
        &-prev
            left 0
        &-next
            right 0