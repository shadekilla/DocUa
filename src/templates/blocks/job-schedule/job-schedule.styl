.job
  &-schedule
    position absolute
    right -12px
    top -2px
    display inline-block
    padding 3px 10px
    text-decoration none
    line-height 21px
    border 1px solid transparent
    box-shadow: 0 2px 12px transparent
    transition all .3s ease-in-out
    &:after
      content ''
      position absolute
      left -1px
      bottom -4px
      right -1px 
      height 8px
      background #fff9e9
      z-index 2
      opacity 0
      visibility hidden 
      transition opacity .3s ease-in-out, visibility .3s ease-in-out
    &:hover
      background #fff9e9
      border 1px solid #fff
      border-bottom-color transparent
      border-radius: 3px 3px 0 0
      box-shadow: 0 2px 12px rgba(0, 64, 76, 0.35)
      // transition opacity .3s ease-in-out, visibility .3s ease-in-out
      &:after
        opacity 1
        visibility visible 
      .schedule-doctor
        visibility visible
        opacity 1 
        // transition all .25s ease-in-out

      .job-schedule__link-title
        border-bottom-width 0   
        

      @media phone_tablet
        background transparent
        border-radius 0
        box-shadow none
        &:after
          width 0

    @media phone_tablet
      position static
      display block
      padding-left 0
    &__link
      position relative
      display inline-block
      outline none
      text-decoration: none !important
      &:hover
        span
          border-color transparent
      &-icon
        position relative
        top 2px
        left -2px
        display inline-block
        sprite($calendar)
      &-title
        float right
        margin-left 3px
        color text_blue
        border-bottom 1px dotted text_blue
        transition border-color 0.2s ease 
