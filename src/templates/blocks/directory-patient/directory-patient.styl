.directory-patient
    &__link
        overflow hidden
        text-decoration none
        &:hover
            .directory-patient__label
                text-decoration none
    &__label
        float left
        width 90%
        text-decoration underline
        @media phone
            width 85%
            overflow hidden
    &__value
        float right
        color #676767
        margin 0 -5px
        padding 0 5px
        border-radius 100px
        background-color rgba(255, 255, 255, .8)
        box-shadow 0 0 10px #fff
        @media phone
            position relative
        &:before
            content none
            @media phone
                content ""
                position absolute
                top 0
                left -10px
                width 12px
                height 100%
                display block
                background-gradient-horizontal #fff #fff 0.3 1
