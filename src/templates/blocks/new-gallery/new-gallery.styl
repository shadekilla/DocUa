.gallery-wrap
	padding 10px 0
	&__title, &__text 
		padding 5px 22px
		color: #5e6e71
	&__title
		font-size: 18px
	&__text
		font-size 16px
.fresco-gallery
	background-color: #e5f2f5
	padding 10px 20px
	&__lists 
		// display inline-block
		clearfix()
		// width 100% 
		margin 0 -5px
	&__item
		display block
		position relative
		// height: 152px
		// &:first-child
		// 	margin-left 0
	&__link
		position relative
		float left
		width: 193px 
		height 145px
		overflow hidden  
		margin 0 6.9px 
		&:before
			content: ""
			position absolute
			top 0
			bottom 0
			left 0
			right 0
		&:hover
			cursor pointer
			&:before
				background: rgba(0, 0, 0, .3) 
				box-shadow: inset 0px 0px 0px 3px #35bfae
			&:after
				content: ""
				position absolute
				top 50%
				left 50%
				transform: translate(-50%, -50%)
				background: url("i/gallery/gallery-zoom.png")
				width 35px
				height 35px
	
	&__picture
		display inline-block
		width: 193px
		height 145px  
		background-size: cover 
