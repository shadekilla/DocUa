.tab-rezults_mod
	padding-bottom 150px
.gallery-wrap
	padding 10px 0
	
	&__title, &__text 
		padding 5px 22px
		color: #5e6e71
	&__title
		font-size: 18px
	&__text
		font-size 16px
.light-gallery
	background-color: #e5f2f5
	padding 10px 5px 4px 10px
	width 100% 
	&__lists 
		clearfix() 
		margin 0 -5px
		@media only screen and (max-width:1200px)
			text-align center
		
	&__item
		float left
		overflow hidden  
	&__link
		display inline-block
		position relative
		&:before
			content: ""
			position absolute
			top 0
			bottom 5px
			left 0
			right 0
		&:hover
			cursor pointer
			&:before
				background: rgba(0, 0, 0, .3) 
				box-shadow: inset 0px 0px 0px 3px #35bfae
			&:after
				content: ""
				position absolute
				top 50%
				left 50%
				transform: translate(-50%, -50%)
				sprite($gallery-zoom)
				width 35px
				height 35px
	
	&__picture
		display inline-block
		width: 200px
		height 146px  
		background-size: cover 
		
	&__image-caption
		// display inline-block
		// vertical-align bottom
		position absolute
		left 5px
		bottom 10px
		min-width: 18px
		padding 0 8px
		line-height: 24px
		color: #5e6e71
		font-size: 14px
		font-weight: 700
		background rgba(255, 255, 255, .75)
		border-radius: 3px 
		margin 0
		
	
.js-slider-next
	sprite($slider-next)
	width: 32px
	height: 32px
	
	
			