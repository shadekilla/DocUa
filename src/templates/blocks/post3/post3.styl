$post_hor_padding = 14px

.post3
    position relative
    max-width 565px 
    // width 100% 
    height 188px
    margin-bottom 25px
    background transparent
    font-size 0
    overflow hidden 
    @media only screen and (max-width:768px)
        margin 0 auto 
        margin-bottom 25px 
    &__body
        position relative
        display inline-block
        width 67% 
        height 100%
        margin-left -1px 
        border-radius 2px
        border 1px dashed blue_base
        overflow hidden 
        padding 9% 14px 0 30px
        z-index 2
        &:hover
            .post3__link 
                border-bottom none
                color blue_select  
        @media screen560
            height auto
    &__thumb
        position relative
        display inline-block
        max-width 33% 
        width 100% 
        height 100%
        background-color #fff
        border-radius 2px
        background-size cover
        background-repeat no-repeat
        z-index 3
    &__title
        display inline-block
        vertical-align top
        margin-bottom 10px 
    &__link 
        font-size 20px 
        font-weight bold
        color blue_base 
        border-bottom 1px solid blue_base
        text-decoration none
    &__sticker 
        position absolute
        top 0
        left 33%  
        padding 8px 3px 8px 15px 
        z-index 4
        .sticker-bg
            position absolute
            top 0
            left 0 
            right 0
            bottom 0
            background green_base
            z-index 2 
            &:after
                content "" 
                position absolute
                top -39px
                right -27px
                width 33px
                height 70px
                background green_base
                transform rotate(40deg)
                z-index 2
        span
            position relative
            font-size 18px
            font-weight bold
            line-height 1 
            color #FFF 
            opacity 1
            z-index 5

    &__price
        display inline-block
        vertical-align top
        // position absolute
        // bottom 20px
        // left 18px
        // right 0
        height 25px 
        @media only screen and (max-width: 1024px)
            width 100%
            &-old + &-value
                float right
            &-old
                float left
                line-height 1.3       
        &-value
            display inline-block
            margin-left 15px
            font-weight 700
            font-size 28px
            line-height 1 
            color text_color 
        &-old + &-value
            margin-top 0
            display inline
        &-old
            display inline-block
            color light_blue_text
            font-size 23px
            line-height 1
            text-decoration line-through
.main-more-link
    position relative
    padding-right 35px
    font-size 16px
    font-weight bold
    color blue_base
    &:after
        content ""
        position absolute
        top 5px
        right 5px
        width 20px 
        height 15px  
        sprite($arrow_right_green)
