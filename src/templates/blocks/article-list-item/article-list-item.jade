-article = data.article
-news = data.news
+e.inner
    if article.thumb
        +e.image
            img(src=article.thumb, alt=article.title)
    +e.right-column
        +e("h1").title
            a(href=article.link, title=article.title)= article.title
        +e.content
            p
                != article.shortDesc

        if news
            +e.meta
                if article.category
                    +e("span").category
                        | <span>Категория:</span>&nbsp;
                        a(href="#", title="")= article.category
                if article.themes
                    +e("span").themes
                        |  <span>Темы: </span>&nbsp;
                        each theme, i in article.themes
                            a(href="#", title="")= theme
                                if i < article.themes.length -1
                                    | ,&nbsp
                if article.date
                    +e("span").date
                        |  <span>Дата: </span>&nbsp;
                        =article.date