.diseases-check-list
    margin 0
    padding 0
    list-style none
    columns 4
    @media only screen and (max-width: 940px)
        columns 3
    @media phone 
        columns 1
.diseases-content, .all-diseases
    .header-styled.header-styled-noborder
        border-bottom none
        margin-bottom 23px  
        padding-bottom 0 
        .h1
           color #5e6e71 
.diseases-content
    .header-styled
        margin-top 0 
.all-diseases
    .header-styled
        margin-top 15px 
    .diseases-item        
        position relative 
        padding 0 0 9px 15px
        font-size 15px 
        font-weight normal
        line-height 19px
        .diseases-link
            color blue_link   
            outline none  
            &:before
                content ""
                position absolute
                left 0  
                top 6px 
                display inline-block
                width 8px
                height 8px
                background-color #ddecef
                -webkit-border-radius 50% 
                border-radius 50% 
                
.all-diseases
    .alphabet-index
        min-height 40px 
        height 100% 
        margin-bottom 30px  
        padding 0 10px 
        text-align center
        -webkit-border-radius 20px
        border-radius 20px
        background-color #e9f4f6
        &__list
            margin 0
            padding 0
            list-style none
            font-size 0 
        &__item
            display inline-block
            vertical-align middle
            &.active
                position relative
        &__link
            position relative
            display inline-block
            vertical-align baseline 
            padding 0 11px 
            font-size 17px 
            line-height 40px
            color blue_link 
            text-decoration none 
            font-family 'Roboto', sans-serif
            font-weight bold  
            outline none 
            z-index 3
            @media only screen and (max-width: 1024px)
                padding 0 8px 
            &:before
                    content ""
                    position absolute
                    top 11% 
                    left 50%
                    z-index -1 
                    width 32px 
                    height 32px 
                    margin-left -16px 
                    transition all .2s ease-in-out
                    border-radius 50%
            &:hover
                color #0089D1 
            &:hover:before
                background-color #B0DBE0             
            &.active
                color #FFF 
                &:before
                    background-color #00829b 
            &.disabled
                color #b5c2ca 
                cursor default
                &:hover:before
                    background none

.header-styled__darkColor
    .h1
        color text_color
