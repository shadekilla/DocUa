.short-list
    background #fff
    border-bottom 1px dashed text_blue
    h3
      margin-top 13px
      margin-bottom 4px
      font-size 18px
      text-align center
    &__footer
        padding 6px 0 10px
        text-align center
        border-radius 0 0 3px 3px
        border-top 1px dashed text_blue
    &__items
        margin 0
        list-style none
        &-wrapper
            overflow auto
    &__item
        padding 15px 21px 15px
        border-top 1px dashed text_blue
        overflow hidden
        &-content
            overflow hidden
    &__image
        float left
        width 72px
        margin 5px 14px 0 0
        overflow hidden
        @media only screen and (min-width: 991px) and (max-width: 1200px)
            width: 50px
        img
            width 100%
            border-radius: 2px
    &__title
        display block
        line-height 1.3
        font-weight bold
        color: #4b89d3
        font-size: 16px
    &__label
        margin-top 3px
        line-height 1.2
        a
            white-space nowrap
    &__more-link
        font-size 15px

    .rating
        margin-top 10px
        &__stars
            // float right
            margin-top 4px
        &__value
            // float right
            margin 0 5px 0 0
            @media only screen and (min-width: 991px) and (max-width: 1200px)
                font-size: 16px
                margin: 0
                top: 3px
    
