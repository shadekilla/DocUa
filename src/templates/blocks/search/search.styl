.search
    position relative
    float right 
    margin 4px 0
    &__field
        display block
        width 428px 
        height 42px
        padding 0 40px 0 20px
        font-size 16px 
        line-height 2.9 
        background #fff
        border none
        z-index 6
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
        box-shadow none 
        border-radius: 2px
        placeholder(#5e6e71, 16px)
        
        &:focus, &:active
            box-shadow none
        &:focus
            placeholder(transparent, 0px)
        @media phone
            width 100% 
        @media only screen and (max-width: 1100px)
            width 400px 
        @media only screen and (max-width: 960px)
            width 300px
        @media only screen and (max-width: 860px) 
            width auto
    &__button
        position absolute
        top 50%
        right 12px
        margin-top -10px 
        border 0 none
        transition opacity 0.2s ease 
        background none
        background-image url('i/icons/search-main.png')
        width 21px
        height 21px
        background-repeat no-repeat 
        background-position 50% 50% 
        outline none
        transition all .2s ease-in-out
        box-sizing border-box 
        z-index 2 
