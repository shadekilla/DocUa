.block-package
    .btn
        font-size: 16px
        font-weight: 700
        padding: 2px 22px 4px
        display: inline-block
        vertical-align: top
    &__title
        clearfix()
        padding: 0 21px 
        cursor: pointer
        user-select: none
        strong
            color: #5e6e71
            font-size: 15px
            line-height: 1.2
            padding: 13px 0 13px 20px
            display: block
            overflow: hidden 
            position: relative
        &-in
            border-top: 1px solid #c0d2d6
        // .title-in__no-info
        //     strong
        //        padding: 13px 0 13px 0  
    &__icon
        position: absolute
        top: 15px
        left: 0
        width: 14px
        height: 14px
        border-radius: 50%
        background-color: #c0d1d8
        &:before
            content: "" 
            position: absolute
            top: 5px
            left: 4px
            border-style: solid
            border-color: #fff transparent transparent
            border-width: 5px 3px 0              
    &__price-discount
        float: right
        font-size: 15px
        color: #5e6e71
        text-align: right
        margin-left: 10px
        line-height: 2
        padding-top 8px 
        @media screen560
            float: left
            margin-left: 0
            padding: 7px 0
            line-height: 2.2
        span
            color: #a9bbc2
            text-decoration: line-through
            padding: 0 5px
        a.btn-hide
            display none
    &__drop
        position: relative
        padding-top: 1px
        display: none
        &:before
            content: "" 
            position: absolute
            top: 0
            left: 21px
            right: 21px
            border-bottom: 1px solid #c0d2d6 
    &__left
        float: left
        font-size: 15px
        line-height: 22px
        color: #5e6e71
        width: 65%
        padding: 8px 0
        span
            color: #90b1b8
    &__right
        float: right
        width: 35%
        text-align: right
        font-size: 0
        @media screen560
            width: 100%
            text-align: left
        span
            color: #5e6e71
            font-size: 16px
            display: inline-block
            vertical-align: top
            line-height: 1
            padding: 11px 0 
    &__row
        padding: 0 21px 0 39px
        margin-bottom: -1px
        position: relative
        &:hover
            background-color: #e5f2f5
            z-index: 2
            .block-package
                &__row-in
                    border-color: transparent 
                    &:before
                        background-color: green_base
                    .btn
                        display: inline-block
        &-in
            border-bottom: 1px solid #c0d2d6
            position: relative
            clearfix()
            &:before
                content: "" 
                position: absolute
                top: 16px
                left: -17px
                width: 8px
                height: 8px
                background-color: #96b8bf
                border-radius: 50%
                transition: background 0.2s
            &.border__none
                border-bottom none
            .btn
                display: none
                margin: 4px 0 4px 21px
    .item-with-btn
        &:hover
            background-color #e5f2f5 
    .btn-media
        @media only screen and (max-width: 1200px)
            position absolute
            right 20px
            top 55px
        @media only screen and (max-width: 992px)
            top 90px
        @media screen560
            position static 
            float right
            margin 0
            margin-top -5px
            padding 5px 8px !important
    .price-item__mod
        @media screen560
            padding: 20px 20px 50px
        .block-package__price-discount
            @media screen560 
                position: absolute
                bottom: 10px
                height: 40px
                text-align: left