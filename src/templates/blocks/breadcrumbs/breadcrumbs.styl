.breadcrumbs
	margin 5px 0 15px
	.breadcrumb
		font-size 14px
		@media only screen and (max-width: 640px)
			display none
		ol, ul
			margin: 0
		a 
			// display inline-block
			// vertical-align middle
			text-decoration none
			color text_color
			font-size: 12px
			font-weight: 400
			&:hover
				text-decoration underline
		// li + li
		span + span
			&:before
				content ">" 
				padding 0 5px 
		// li
		// 	>span
		// 		color #b6c1c3
		span
			font-size: 12px
			&:last-child
				color #b6c1c3