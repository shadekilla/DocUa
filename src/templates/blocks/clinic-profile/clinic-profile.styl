//tab-finished
.completed-header
    margin-top 20px
    clearfix()
    p
        margin 0
    &__item
        position relative
        float left
        margin-right 15px
        &:last-child
            float right
            margin-right 0
        @media only screen and (max-width: 1024px) 
            margin-right 10px
        .block-wrap 
            position relative
            &__search
                background-color white
                border 1px solid rgba(61, 160, 180, 0.37)
                border-radius 3px
                box-shadow inset 2px 3.3px 1px rgba(43, 151, 173, 0.12)
                width 256px
                padding 5px 10px 5px 15px
                font-size 14px
                color text_color
                outline none
                &::-webkit-input-placeholder 
                    color #bed3d8
                &::-moz-placeholder
                    color #bed3d8          
                &:-moz-placeholder 
                    color #bed3d8          
                &:-ms-input-placeholder
                    color #bed3d8  
                @media only screen and (max-width: 1024px) 
                    width 200px  
            &__icons
                position absolute 
                cursor pointer
                right 15px
                top 50%
                margin-top -8px  
                width 17px
                height 17px
                background url('i/icons/clinic-profile-search.png') no-repeat
        .everyone-header
            display inline-block
            background-color white
            border 1px solid rgba(22, 141, 164, 0.7)
            border-radius 3px
            box-shadow 0 2px 4px rgba(0, 64, 76, 0.15)
            padding 5px 10px 5px 15px
            width 184px
            color #168da4
            &:after
                content ''
                float right
                margin 8px 6px 0 0 
                display inline-block
                border 4px solid transparent
                border-top 6px solid #1d89a0
        .everyone-lists 
            display none
            position absolute
            top 30.3px 
            z-index 10 
            width 184px
            color #91b5bc
            font-size 14px
            border 1px solid rgba(22, 141, 164, 0.7)
            border-radius 0 0 3px 3px
            box-shadow 0 2px 4px rgba(0, 64, 76, 0.15)
            background #fff
            &.is-open
                display block
            &__list
                padding 5px 5px 5px 15px
                color text_color
                cursor pointer
                &:first-child
                    margin-top 6px
                &:last-child
                    margin-bottom 6px
                &:hover
                    background-color #e5f2f5 
                    color #168da4 
                    
    &__date-picker
        position relative
        width 226px
        height 31px
        color #bed3d8
        padding-left 35px
        cursor pointer
        background-color: white
        border: 1px solid rgba(22, 141, 164, 0.7)
        border-radius: 3px
        box-shadow: 0 2px 4px rgba(0, 64, 76, 0.15) 
        text-align left
        
    .date-picker
        position relative
        outline none
        &:before
            content ''
            position absolute
            left 8px
            top 50%
            margin-top -10px
            border none
            background url('i/cabinet/piker-calendar.png') no-repeat center center
            margin-right 10px
            width 20px
            height 20px
            z-index 5
             
        &:after
            content ''
            position absolute
            top 50%
            margin-top -3px
            right 15px 
            width 0
            height 0
            border 4px solid transparent
            border-top 5px solid blue_base
        &:focus
            outline none
            border none
