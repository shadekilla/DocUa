        display none
.container-menu__mod
    border-bottom 2px solid green_base 
.cabinet-section__mod 
    margin-top 25px
    .cabinet-section__content
        padding 30px 0 0 0 
    
.tabs-shadow
    line-height 40px
    box-shadow: 0 1px 1px rgba(0, 64, 76, 0.30)
    background-color #FFF
    clearfix() 

.comment-block
    &__item
        font-size 14px
        color text_color
        min-height 100px 
        span
            font-style italic
            line-height 17px
            &.no-comment
               color rgba(#5e6e71, 0.6)     
.clinics-profile__tabs
    margin-left 151px 
    border-bottom none 
    li
        position relative
        box-sizing border-box
        border none
        &:hover
            color blue_link
            border none
        a
            padding 10px 21px
            padding-bottom 15px  
            margin-right 3px
            font-size 15px
            text-decoration none
            outline 0
            border-radius 0 
            color blue_link
            border none
            @media tablet
                padding 10px 11px
                padding-bottom 15px 
            &:hover
                color blue_link
                border-color none !important 
                box-sizing border-box
        &.active
            &:after
                border 1px solid blue_base
                content ''
                width 98%
                height 0
                position absolute
                left 0
                top -2px
                z-index 1
            &:before
                content 'Заявки'
                position absolute
                left 50%
                top -44px
                z-index 5  
                color #00829b
                font-size 16px
                font-weight 700
                text-transform uppercase 
                transform translateX(-50%)
            a
                position relative
                font-weight 700
                color text_color
                background url(i/grey_texture_opac90.png)
                box-shadow inset 5px 0px 10px -5px rgba(0, 64, 76, 0.15)
                border none
                &:before
                    content ""
                    position absolute
                    left 50%
                    top -2px
                    width 0
                    height 0
                    border 8px solid transparent
                    border-top 7px solid blue_base
                    transform translateX(-50%)
                &:after
                    content ""
                    position absolute
                    left 50%
                    top -5px
                    width 0
                    height 0
                    border 8px solid transparent
                    border-top 7px solid #FFF
                    transform translateX(-50%)
                    z-index 2
                &:hover
                    color text_color
                    background-color grey_base
                    border none
                &:focus
                    color text_color
                    background-color grey_base
                    border none
        
