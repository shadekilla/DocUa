.application
    margin-bottom 80px
    background grey_texture
    &.application-width
        min-width: 900px
    &__current
        
        .application__item-big
            position relative
            margin-top 20px
            border-radius 3px
            box-shadow: 0 1px 1px rgba(0, 64, 76, 0.30)
            background-color white
            min-height 180px
            clearfix()
            &.item-elements 
                tr
                    td
                        &:nth-child(2)
                            width 34%
                tr
                    td 
                        vertical-align top
                        &:first-child
                            vertical-align middle
                            width 14%
                            background green_base
                            -webkit-border-radius 3px 0 0 3px  
                            border-radius 3px 0 0 3px
                            padding 20px
                            .title
                                text-align center
                                min-width 123px 
                                &__number
                                    font-size 22px
                                    font-weight 700
                                    color #fff
                                    padding-bottom 10px
                                    &:before
                                        content ""
                                        display inline-block
                                        sprite($item-number)
                                        width 19px
                                        height 18px
                                        margin 0 5px -1px 0 
                                &__info
                                    font-size 12px
                                    font-weight 700
                                    padding 3px 0
                                    color #FFF 
                                    display block
                                    width 100%
                                    border 1px solid rgba(#FFF, 0.88) 
                                    border-radius 3px 
                                &__time
                                    font-size 54px
                                    min-height 77px
                                    font-weight 300
                                    color #FFF
                                    font-family Roboto, Arial,  sans-serif
                                    font-weight 100 
                                    letter-spacing -1px
                        &:nth-child(2)
                            padding 20px
                            background #FFF 
                            table 
                                width 100%
                                table-layout fixed
                                tr 
                                    td
                                        padding 0
                                        width auto
                                        border-left none 
                                        &.no-info
                                            color #b5b9ba
                                        &:first-child
                                            font-size 14px
                                            font-weight 400
                                            color text_color
                                            // width 110px
                                            background-color #FFF 
                                            width 14%
                                        &:last-child
                                            font-size 14px
                                            font-weight 700
                                            padding-left 10px
                                            width 22%
                        &:nth-child(3)
                            background #fcfdfd
                            -webkit-border-radius 0 3px 3px 0  
                            border-radius 0 3px 3px 0
                            padding 20px  
                            border-left 1px dashed rgba(29,137,160,.45)
                            width 30%
                            
                        &:last-child
                            border-left 1px dashed rgba(29,137,160,.45)
                            width 22%
                            padding 20px
                            
            &.item-small
                tr
                    td
                        &:first-child
                            width 161px
                            .title
                                .item-small__number
                                    color text_color
                                    &:before
                                        sprite($item-number_black)
                                .item-small__info
                                    color text_color
                                    border 1px solid rgba(#5e6e71,0.59)
                                &__picture
                                    line-height 7
                            &.item-small__title-time 
                                background-color #fbf4e1
                            &.item-small__title-canceled
                                background-color rgba(#909191, 0.26)
                    
                            .comment-block
                                border-left 1px dashed rgba(29,137,160,.45)
                                width 100%
                                &__item
                                    &:last-child
                                        width 50%
                        &:last-child
                            width 52%
                        &.last-child
                            width 22%
