    .div-color
        padding 35px 40px
        border-radius 3px
        margin 20px 0
        &.bg-blue
            background-color #e5f2f5
        &.bg-yellow   
            background-color #fff9e9
        &.bg-pink  
            background-color #fddfdf
    .pulls-left
        float left
        &:after
            content ""
            clear: left
    blockquote 
        padding: 29px 
        margin-left 50px 
        position: relative
        font-style: italic
        border-left none
        border-radius 3px
        font-size: 15px
        line-height: 24px 
        @media phone
           margin-left 20px 
           padding 10px
        &:before
            content: "â€œ"
            color: #a3c1c7
            font-size: 120px
            line-height: 0.8
            position: absolute
            top: 0
            left: -60px        
            @media phone
                font-size: 70px
                left -31px
        &:after
            content "" 
            position absolute
            top 0
            right 0
            bottom 0
            left 0 
            width 100%
            height 100%
            z-index -1
            background-color: #e5f2f5
            border-left: 1px solid #c0d7dc
    table
        width 100% 
        margin 20px 0
        outline none 
        border-collapse separate 
        border 1px solid rgba(0,130,155,.16) 
        th
            height 40px
            background-color #00829b
            color #FFF
            font-size 14px
            font-weight 400
            text-align center
            line-height 1
            &:first-child
                padding-left 20px  
                text-align left
            &:last-child
                padding 0 10px 
                background-color #00829b
        tr
            color text_color
            font-size 14px
            font-weight 400 
            
            &:first-child
                td
                    border-top none
            td
                text-align center
                border-top 1px solid #dde8ea
                &:first-child
                    padding 10px 10px 10px 20px
                    text-align left
                    border-right 1px solid rgba(#00829b, 0.14)
                &:nth-child(2)
                    padding 10px 15px
                    border-right 1px solid rgba(#00829b, 0.14)
                &:nth-child(3)
                    padding 10px 15px
                    border-right 1px solid rgba(#00829b, 0.14)
                &:nth-child(4)
                    padding 10px 15px
                    border-right 1px solid rgba(#00829b, 0.14) 
                &:last-child
                    padding 10px 15px
                    text-align center
                    border-right 1px solid transparent 
            td[colspan="4"]
                text-align left
                color: #09859d
                font-size: 14px
                font-weight: 700
    img.full-width
        margin 10px -20px
    ul
        padding-left: 20px
        margin 10px 0
        li
            position: relative
            margin-bottom: 4px
            padding-left: 20px
            // line-height: 1.75
            color: #5e6e71
            font-size: 16px
            font-weight: 400
            line-height: 24px
            list-style-type none
            &:before
                content ""
                position: absolute
                top: 10px
                left: 0
                width 5px
                height 5px
                border-radius 50%
                background-color #96B8BF 
                // font-size: 22px
                // line-height: 24px
                // color: #96b8bf
            >ul
                padding-left 0
                margin 0
                >li
                    &:before
                        content ""
                        width 5px
                        height 5px
                        border 1px solid #96b8bf
                        border-radius 50%
                        background-color transparent 
    .style-numeric
        counter-reset li
        list-style none
        padding-left 20px
        margin 10px 0
        li
            position relative
            padding-left 20px
            line-height: 2
            &:before
                content counter(li) '. '
                counter-increment li
                position absolute
                left 0
                top 0
                border none
                background-color transparent 
                font-weight bold
    .hyphen-lists
        li
            padding-left 15px
            &:before
                content "-"
                top 0
                color text_color
                border none
                border-radius 0
                background-color transparent 
                font-size 22px
    .note
        position relative
        margin 28px 0 28px 75px
        padding-left 25px
        font-style italic
        border-left 1px solid text_blue
        &:before
            content ""
            position absolute
            top 50%
            left -57px
            margin-top -13px
            sprite($dcoma)
    .picture-wrap
        text-align center
    .picture
        &.left  
            padding 0 15px 15px 0
        &.right  
            padding 0 0 15px 15px 
        &.center  
            padding 0 0 15px 0
    .intro
        font-style: italic
        border-top: 1px dotted 
        border-bottom: 1px dotted 
        padding 10px 0 
        
