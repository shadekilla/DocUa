$mobile_font_size = 18px
.navbar-mobile
    position fixed
    left 0
    top 81px
    width 100%
    height 100%
    padding-top 20px
    z-index 10000
    background rgba(0, 130, 155, .9)

    .search
        float none
        width 100%
        
        &__field
            height 37px
            font-size $mobile_font_size
            
        &__button
            margin 11px 15px 0 0

    .mobile-menu
        padding 30px 0
        li
            margin-bottom 5px
            text-align center
            a
                display block
                padding 6px 0
                color blue_base
                font-size $mobile_font_size
                text-transform uppercase
                text-decoration none
                background #E7E9E9;
                border-radius border_radius_sm
                
                &:hover
                    text-decoration none
                    background grey_base
                    
            &.active
                a
                    color #fff
                    text-decoration none
                    background green_base
                              