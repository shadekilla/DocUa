.top-list
  margin 0 0 10px
  padding 4px 0 0 0
  list-style none
  &__item
    overflow hidden
    border-top 1px dotted blue_base
    padding 3px 0
    &.first-child
      border-color transparent
    &-link
      text-decoration none
    &-image
      float left
      width 35px
      height 35px
      overflow hidden
      background-color: #CCE7F6
      margin-right 15px
      img
        width 100%
        height 100%
    &-title
      overflow hidden
      padding 7px 0
      font-size 15px
      line-height 20px
      text-decoration underline
      .top-list__item:hover &
        text-decoration none
  &__rating
    float right
    margin 7px 0 0 10px
    font-size 16px
    line-height 20px
    font-weight bold
    color #00829b