.top-list
  // margin 0 0 10px
  padding 0
  list-style none
  clearfix()
  &__item
    border-top 1px solid #d9ecf0
    transition all .2s ease-in-out
    &:hover
      background #deeff2
    &:first-child
      border-top-color: transparent
    
    &-link
      // display block
      width 100%
      height 100%
      text-decoration none
      padding 7px 10px 7px 15px
      height 51px
      clearfix()
      display flex
      -webkit-flex-direction row 
      -ms-flex-direction row 
      flex-direction row 
      justify-content: center 
      align-items center
      @media only screen and (max-width: 960px)
        height auto
      &:active, &:focus
        text-decoration none
    &.main-items
      .top-list__picture
        border-radius: 50%
        overflow hidden 
        img
          max-width: 100%
          max-height: 100%
      
  &__left
    // float left
    font-size 0
    width 74% 
    @media only screen and (max-width: 1100px)
      width 100%
  &__right
    // float right
    width 26%
    @media only screen and (max-width: 1100px)
      width 28%
    @media only screen and (max-width: 960px)
      width 38%
    @media only screen and (max-width: 860px)
      display none
    
  &__title
    // display inline-block
    // vertical-align middle
    // margin-left 12px
    font-size: 14px
    color: #5e6e71
    font-weight: 400
    line-height: 18px
    max-height: 51px 
    overflow hidden 
    a
      text-decoration none
      
    span
      text-decoration underline 
      font-weight bold
      color: #00829e 
      font-size: 14px
  &__picture
    width 27px
    // height 25px
    margin-right 12px
    text-align center
  &__subject
    color: #7fc0ce
    font-size: 14px
    font-weight: 400
    padding-top: 2px  
    text-align right
    line-height: 18px



