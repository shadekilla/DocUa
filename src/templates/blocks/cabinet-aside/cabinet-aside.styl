                    position absolute
                    left 20px
                    top 13px
                    width 16px
                    height 16px
                    display block
                    background url('i/cabinet/ok-icon.png') no-repeat center
                &__icon-mod
                    position absolute
                    left 20px
                    top 13px
                    width 16px
                    height 16px
                    display block
                    background url('i/cabinet/rewiews-icon-moderation.png') no-repeat center
                &__icon-cancel
                    position absolute
                    left 20px
                    top 13px
                    width 16px
                    height 16px
                    display block
                    background url('i/cabinet/rewiews-icon-cancel.png') no-repeat center
                &__link
                    color #FFF
                    font-style italic
                    &:before
                        content ""
                        position absolute
                        left 20px
                        top 12px 
                        display block
                        background url('i/cabinet/pencil-icon-white.png') no-repeat center
                        width 16px
                        height 16px 
        .right-side__cancel 
            background-color #e2e3e3
            color #5e6e71 
            .otziv-ok__link
                color #5e6e71 
                font-style italic
                &:before
                    background url('i/cabinet/pencil-icon-cancel.png') no-repeat center
                    
