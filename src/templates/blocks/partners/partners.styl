.partners
    margin-top 15px
    &__fieldset
        border 1px solid #fff
        padding 10px 0 0 14px
        max-width 190px
        @media phone_tablet
            max-width 100px
            padding 10px 0 0 8px
    &__title
        font-size 10px
        color #fff
        padding 0 2px
    &__item
        display inline-block
        margin-right 4px
        margin-bottom 10px
    &__item > img
        border 0 none
        
.partners-main 
    .header-styled    
        &.header-partners
            margin-bottom 40px 
            padding-bottom 10px 

.partner-registration
    &__image
        img
            max-height 130px 
            height 100%
.form-group
    @media phone        
        .col-xs__mod
            margin-left -30px
    .radio-inline + .radio-inline
        margin-left 0
    .radio-inline
        margin-right 10px  
    &__registration
        p
            display inline-block
            margin-left 15px  
        @media phone
            a
                display block
                
.partner-how-it-work
    .how-its-made
        &__item
            padding 0 45px 
            @media phone
                padding 0 10px 
        &__item.even
            &:before, &:after
                content ""
                position absolute
                sprite($how_to_made)
                @media phone
                    display none 
            &:before    
                top 20px
                left -20px 
            &:after
                top 20px
                right -30px  