.location-lists
	display none
	position absolute
	top 100%
	left 0
	right 0
	width 100% !important 
	background #FFF 
	// max-height 216px
	overflow hidden
	box-shadow: 0 3px 3px rgba(0, 0, 0, 0.25)
	border-top 1px solid #d9ecf0
	&__item
		border-top 1px solid #d9ecf0
		padding 0 0 0 18px
		margin-right 22px
		color: #5e6e71
		font-size: 14px 
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
		transition: background .2s ease
		&:first-child
			border-top-color: transparent
		&:hover
			// opacity .8 
			// background: #deeff2
			background #d9ecf0
		&.is-red, &.is-green, &.is-blue, &.is-area
			&:before
				content: ''
				display inline-block
				width 20px
				height 13px
				margin-right 20px
				margin-bottom -2px  
		&.is-red
			&:before
				sprite($underground-red) 
				// background-position center left
		&.is-green
			&:before
				sprite($underground-green)
				// background-position center left
		&.is-blue
			&:before
				sprite($underground-blue)
				// background-position center left
		&.is-area
			&:before
				width 13px
				height 18px
				margin-left 3px 
				margin-right 24px
				sprite($search-location)
				// background-position center left
		.is-location-bold
			display inline-block
			font-weight 700 
		 