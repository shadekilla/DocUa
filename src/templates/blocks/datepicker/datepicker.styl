.daterangepicker
  position absolute
  color inherit
  background #fff
  border-radius 3px
  width 560px
  padding 0
  border 1px solid #00829b
  box-shadow: 0 2px 4px rgba(0, 64, 76, 0.19)
  // padding 4px
  // margin-top 1px 
  // top 220px
  // left 20px
  
  &:before
    top -22px
    width 0
    height 0
    border 11px solid transparent
    border-bottom 10px solid #00829b
    border-bottom-color none 
  &.open
    display block 
  &.opensleft
    // top 276px !important
    &:before
      right 170px
    &:after
      right 10px
  &.openscenter
    &:before
      left 0
      right 0
      width 0 
      margin-left auto
      margin-right auto
    &:after
      left 0
      right 0
      width 0
      margin-left auto
      margin-right auto
  &.opensright
    &:before
      left 9px
      
      
  &.dropup
    margin-top 5px
    &:before
      top initial
      bottom -7px
      border-bottom initial
      border-top 7px solid #ccc
    &:after
      top initial
      bottom -6px
      border-bottom initial
      border-top 6px solid #fff
  &.dropdown-menu
    max-width none
    z-index 3001
  &.show-calendar
    .calendar
      display block
  .daterangepicker-wrap
    display inline-flex
    flex-direction column
    width 100%
  .calendar-block
    order 2
  .calendar
    display none
    width 50% 
    // margin 4px
    &.single
      .calendar-table
        border none
    &.left
      display inline-block
      border-right 1px solid rgba(#148ca3, 0.33)
    &.right
      display inline-block
    
  
  .calendar-table
    // border 1px solid #fff
    // padding 4px
    // border-radius 4px
    background #fff
  table
    width 100%
    margin 0
  td
    color text_color
    font-size 16px 
    // padding 8px !important 
    &.in-range
      background-color #eaf5f9
      border-color transparent
      color: #a6b8bc
      border-radius 0
      
    &.start-date
      border-radius 4px 0 0 4px
      &.end-date
        border-radius 4px
    &.end-date
      border-radius 0 4px 4px 0
    &.off
      color: #a6b8bc
    &.today 
      color #f07804
      font-weight normal 
      position relative
      &:after
          content ''
          position absolute
          bottom 3px
          left 50% 
          margin-left -3px
          z-index 10
          display block
          background-color #f07804
          width 5px
          height 5px
          border-radius 50% 
  th
    font-size 15px 
    color: lighten(#148ca3, 0.84)
    font-weight normal
    &.month
      color text_color
      font-size 16px
      width auto
  thead
    tr
      &:first-child 
        border-bottom 1px solid rgba(#148ca3, 0.33)
        .prev, .next
          position relative
          &:before
            position absolute
            top 0
            display inline-block
            font-size 23px
            color text_color 
        .next
          &:before
            content '›'
            right 20px 
        .prev
          &:before   
            content '‹'
            left 20px 
            
            
      &:last-child
        th
          padding 8px
  select
    &.monthselect
      margin-right 2%
      width 56%
    &.yearselect
      width 40%
  .input-mini
    font-size 15px
    color #91b5bc
    border none
    outline none 
    height 30px
    line-height 30px
    display block
    vertical-align middle
    padding 0 13px
    width 110px
    // &.active
    //   border 1px solid #08c
    //   border-radius 4px
  .daterangepicker_input
    position absolute
    bottom 10px
    &:before
      content '-'
      position absolute
      display inline-block
      right 9px
      top 5px
      color #91b5bc
      z-index 10 
  .calendar 
    &.right
      .daterangepicker_input
        left 95px
        .input-mini
          padding 0
          padding-left 15px
        &:before
          display none
        
  .calendar-time
    text-align center
    margin 5px auto
    line-height 30px
    position relative
    padding-left 28px
    select
      &.disabled
        color #ccc
        cursor not-allowed

.daterangepicker:before, .daterangepicker:after
  position absolute
  display inline-block
  // border-bottom-color rgba(0, 0, 0, 0.2)
  content ''

.daterangepicker.single .ranges, .daterangepicker.single .calendar
  float none

.daterangepicker .calendar th, .daterangepicker .calendar td
  white-space nowrap
  text-align center
  min-width 32px

.daterangepicker td, .daterangepicker th
  text-align center
  width 20px
  height 36px
  border-radius 4px
  // border 1px solid transparent
  white-space nowrap
  cursor pointer

.daterangepicker td.available:hover, .daterangepicker th.available:hover
  background #eee

.daterangepicker td.week, .daterangepicker th.week
  font-size 80%
  color #ccc

.daterangepicker td.off, .daterangepicker td.off.in-range, .daterangepicker td.off.start-date, .daterangepicker td.off.end-date
  background-color #fff
  border-color transparent
  color #999
  font-weight normal 
  &:before 
    display none
  &:hover
    color #999
    font-weight normal 

.daterangepicker td.active, .daterangepicker td.active:hover
  background-color #eaf5f9
  position relative
  z-index 0 
  color #FFF
  font-weight 700 
  &:before
    content ''
    background-color green_base
    position absolute
    top 50% 
    left 50% 
    z-index -1  
    width 28px
    height 26px
    margin-top -13px        
    margin-left -14px 
    border-radius 3px

.daterangepicker td.disabled, .daterangepicker option.disabled
  color #999
  cursor not-allowed
  text-decoration line-through

.daterangepicker select.monthselect, .daterangepicker select.yearselect
  font-size 12px
  padding 1px
  height auto
  margin 0
  cursor default

.daterangepicker select.hourselect, .daterangepicker select.minuteselect, .daterangepicker select.secondselect, .daterangepicker select.ampmselect
  width 50px
  margin-bottom 0

.ranges
  background-color #00829b
  order 1
  font-size 11px
  float none
  // border-radius 3px 3px 0 0 
  height 37px
  text-align center
  ul
    list-style none
    margin 0 auto
    padding 0
    width 100%
  li
    display inline-block
    font-size 14px
    cursor pointer
    border-bottom 1px dashed rgba(255, 255, 255, 0.84)
    padding-top 8px
    margin 0 10px
    color rgba(255, 255, 255, 0.84)
      
    &.last-child
      display none
    &.first-child
      border-bottom none
      cursor default
    &:hover
      border-bottom-color transparent
      
    &.active
      font-weight 700
      border-bottom-color transparent
      
.block-btn
  order 4
  margin 0
  // padding 10px
  border-top 1px solid rgba(#148ca3, 0.33) 
  background-color #FFF 
  border-radius: 0 0 3px 3px
  margin-top -5px
  height 50px
  clearfix()
  ul
    display none
  button
    float right
    font-size 14px
    font-weight: 700
    color #FFF
    margin-top 8px
    &:hover
      color #fff 
  .apply-btn
    margin 8px 10px 0 10px
    background green_base
    &:hover
      background-color: #3ab3a2
      border-color: #3ab3a2
  .cancel-btn
    background-color: #a9bdc4
    &:hover
      background-color: #9BB3BB
      border-color: #9BB3BB
