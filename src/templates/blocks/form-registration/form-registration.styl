.form-registration
    background #e5f2f5 
    border 0 
    &.border-box
        padding 40px 40px
        @media tablet
            padding 25px 
            
        @media phone
            padding 20px 
            
    .is-align-right
        text-align right
        @media phone 
            text-align left

        
    .form-group
        margin-bottom 25px
        line-height 39px 
        &:last-child
            margin-bottom 0  
        &.form-labels
            line-height normal  
            // margin-bottom 25px 
        @media phone
            margin-bottom 20px 
            .col-xs__mod
                margin-left -110px
        @media only screen and (max-width: 710px)        
            .col-xs__mod
                margin-left -80px        
        @media only screen and (max-width: 590px)        
            .col-xs__mod 
                margin-left -50px
        @media only screen and (max-width: 470px)        
            .col-xs__mod
                margin-left -30px
        @media only screen and (max-width: 320px)        
            .col-xs__mod
                margin-left -10px
        .text-center-sm
            @media only screen and (max-width: 768px)
                text-align center
             @media phone_tablet
                text-align center
                
        .control-label
            line-height normal 
            padding-top 0 
            span
                font-size 15px
                
        .radio-inline + .radio-inline
            margin-left 0
            
        .radio-inline
            margin-right 10px  
            margin-bottom 10px 
            @media phone
                margin-bottom 0 
                      
        .radio__label     
            @media phone
                margin-bottom 10px  
                
        .radio-inline, .checkbox
            padding-top 0  
            min-height 0 
            
        .radio-inline_mod
            margin-right 20px 
            &:last-child
                margin-right 0 
                
        &__registration
            @media only screen and (max-width: 768px)
                text-align center
            @media phone_tablet
                text-align center
            @media phone
                text-align center
            p
                display inline-block
                margin 0 
            @media phone
                a
                    display block
            @media tablet
                a
                    display block
        .checkbox
            margin-top -10px 

    .form-control
        height 39px  
        border 0 
        font-size 15px 
        font-family "PT Sans"
        placeholder(text_color, 15px)
        &::-webkit-input-placeholder 
            opacity .67            
            font-style italic
        &:-moz-placeholder  /* Firefox 18- */
            opacity .67            
            font-style italic
        &::-moz-placeholder  /* Firefox 19+ */
            opacity .67            
            font-style italic
        &:-ms-input-placeholder  
            opacity .67            
            font-style italic
           
    
    //checkbox + radiobuttons
    .radio-inline
        padding-left 0 
        @media phone
            padding-top 0 
    .radio-inline + .radio-inline
        @media tablet
            margin-left 0      
    .checkbox-btn,  .radio-btn
        display none 

    .checkbox__label, .radio__label
        span
            position relative
            display inline-block
            padding-left 5px 
            &:before
                content ""
                display inline-block
                width 17px
                height 17px
                margin-right 10px 
                position absolute
                left -20px
                top 0px
         
        .radio-btn + span::before 
            sprite($radio_btn)
            
        .radio-btn:checked + span::before 
            sprite($radio_btn_active)

        .checkbox-btn + span::before 
            sprite($checkbox_partners)
            
        .checkbox-btn:checked + span::before 
            sprite($checkbox_partners_active)
    
        
    //submit-btn
    .btn-primary
        padding 2% 10%
        font-size 18px 
        font-weight bold 
        @media tablet
            padding 10px 50px

    .has-error 
        .error-message
            left 10px
            right 10px  
    
.input-validation_modals
    position relative
    .input-validation__border
        border 1px solid #e74a37
        border-top-left-radius 4px
        border-top-right-radius 4px
        border-bottom-right-radius 0px
        border-bottom-left-radius 0px

.input-validation_message
    position absolute
    width 100% 
    bottom -20px
    background-color #e74a37
    color #fff
    font-size 13px
    line-height 20px 
    text-align center  
    border-radius 0 0 4px 4px 
    @media phone
        font-size 11px
    