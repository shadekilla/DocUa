.form-registration
    background #e5f2f5 
    border 0 
    
    &.user_reg
        padding 45px 40px 20px 20px 
        @media phone
            padding 20px 
        .user_reg-btn
            margin-left 0
            padding 2% 12%
        .user_reg-text
            margin-left 0

    .is-align-right
        text-align right
        @media phone 
            text-align left
            
    .form-group
        @media phone
            .col-xs__mod
                margin-left -110px
        @media only screen and (max-width: 710px)        
            .col-xs__mod
                margin-left -80px        
        @media only screen and (max-width: 590px)        
            .col-xs__mod
                margin-left -50px
        @media only screen and (max-width: 470px)        
            .col-xs__mod
                margin-left -30px
        @media only screen and (max-width: 320px)        
            .col-xs__mod
                margin-left -10px
        .radio-inline + .radio-inline
            margin-left 0
        .radio-inline
            margin-right 10px  
        .radio-inline_mod
            margin-right 30px 
            &:last-child
                margin-right 0 
        &__registration
            p
                display inline-block
                margin-left 15px  
            @media phone
                a
                    display block
    .form-control
        placeholder(text_color, 15px)
        &::-webkit-input-placeholder 
            font-style italic
        &:-moz-placeholder  /* Firefox 18- */
            font-style italic
        &::-moz-placeholder  /* Firefox 19+ */
            font-style italic
        &:-ms-input-placeholder  
            font-style italic
           
    .control-label
        span
            font-size 15px
    
    //checkbox + radiobuttons
    .radio-inline
        padding-left 0 
        @media phone
            padding-top 0 
    .radio-inline + .radio-inline
        @media tablet
            margin-left 0      
    .checkbox-btn,  .radio-btn
        display none 

    .checkbox__label, .radio__label
        span
            position relative
            display inline-block
            padding-left 5px 
            &:before
                content ""
                display inline-block
                width 17px
                height 17px
                margin-right 10px
                position absolute
                left -20px
                top 2px
        
        .radio-btn + span::before 
            sprite($radio_btn)
            
        .radio-btn:checked + span::before 
            sprite($radio_btn_active)

        .checkbox-btn + span::before 
            sprite($checkbox_partners)
            
        .checkbox-btn:checked + span::before 
            sprite($checkbox_partners_active)
            
    //submit-btn
    .btn-primary
        margin-left 5% 
        padding 2% 10%
        font-size 18px 
        font-weight bold 
        

