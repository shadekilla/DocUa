.form-registration
    background #e5f2f5 
    border 0 
    &.border-box
        padding 45px 45px 40px 45px
        @media tablet
            padding 25px 
            
        @media phone
            padding 20px 
            
    &.user_reg
        padding 45px 40px 20px 20px 
        @media phone
            padding 20px 
        .user_reg-btn
            margin-left 0
            padding 2% 12%
        .user_reg-text
            margin-left 0

    .is-align-right
        text-align right
        @media phone 
            text-align left

        
    .form-group
        margin-bottom 25px
        line-height 39px 
        &:last-child
            margin-bottom 0  
        &.form-labels
            line-height normal  
            // margin-bottom 25px 
        @media phone
            margin-bottom 20px 
            .col-xs__mod
                margin-left -110px
        @media only screen and (max-width: 710px)        
            .col-xs__mod
                margin-left -80px        
        @media only screen and (max-width: 590px)        
            .col-xs__mod 
                margin-left -50px
        @media only screen and (max-width: 470px)        
            .col-xs__mod
                margin-left -30px
        @media only screen and (max-width: 320px)        
            .col-xs__mod
                margin-left -10px
        .text-center-sm
            @media only screen and (max-width: 768px)
                text-align center
             @media phone_tablet
                text-align center
                
        .control-label
            line-height normal 
            padding-top 0 
            span
                font-size 15px
                
        .radio-inline + .radio-inline
            margin-left 0
            
        .radio-inline
            margin-right 10px  
            @media only screen and (max-width: 940px)
                margin-bottom 5px 
                &:last-child
                    margin-bottom 0
            @media phone
                margin-bottom 0 
                     
        .radio-inline, .checkbox
            padding-top 0  
            min-height 0 
            
        .radio-inline_mod
            margin-right 30px 
            &:last-child
                margin-right 0 
                
        &__registration
            @media only screen and (max-width: 768px)
                text-align center
            @media phone_tablet
                text-align center
            @media phone
                text-align center
            p
                display inline-block

            @media phone
                a
                    display block
            @media tablet
                a
                    display block
    .form-control
        opacity .67
        height 39px  
        border 0 
        placeholder(text_color, 15px)
        &::-webkit-input-placeholder 
            font-style italic
        &:-moz-placeholder  /* Firefox 18- */
            font-style italic
        &::-moz-placeholder  /* Firefox 19+ */
            font-style italic
        &:-ms-input-placeholder  
            font-style italic
           
    
    //checkbox + radiobuttons
    .radio-inline
        padding-left 0 
        @media phone
            padding-top 0 
    .radio-inline + .radio-inline
        @media tablet
            margin-left 0      
    .checkbox-btn,  .radio-btn
        display none 

    .checkbox__label, .radio__label
        span
            position relative
            display inline-block
            padding-left 5px 
            &:before
                content ""
                display inline-block
                width 17px
                height 17px
                margin-right 10px
                position absolute
                left -20px
                top 0px
         
        .radio-btn + span::before 
            sprite($radio_btn)
            
        .radio-btn:checked + span::before 
            sprite($radio_btn_active)

        .checkbox-btn + span::before 
            sprite($checkbox_partners)
            
        .checkbox-btn:checked + span::before 
            sprite($checkbox_partners_active)
    
    .radio__label     
        @media phone
            margin-bottom 10px 
        
    //submit-btn
    .btn-primary
        padding 2% 10%
        font-size 18px 
        font-weight bold 
        

