article.static-page
    background #fff
    padding 38px
    margin-bottom: 35px
    box-shadow: 0 2px 4px rgba(0, 64, 76, 0.15)
    border-radius: 3px
    @media phone_tablet
        padding: 15px 
    .h2, h2
        margin-top 0
        font-size 20px
        font-weight: 700 
    .style-disc
        li:before
            top 1px
    .header-styled
        border-bottom 1px solid #d9ecf0
        margin-bottom 30px
        padding-bottom 6px
    .feedback
        &__link
            margin-right 10px
            
    img.about-doctor
        transform scale(0.75)
        width 123px
        margin-top -100px
        margin-right 40px
    img.ratin-card
        width: 79%
        margin-right: 2%
        float: left
        max-width: 489px
    img.ratin-doctor
        width 19%
        max-width 113px
        float: right
        
    @media tablet
        img[class^="content-img-"]
            width 100%
    @media phone_tablet
        .feedback
            float none
            width 150px
            &__link
                float none
                display block
                width 100%
                margin-bottom 5px
        .select7__current
            padding 0 11px