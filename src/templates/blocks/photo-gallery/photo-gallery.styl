.photo-gallery
    position relative
    display none
    margin-bottom 10px
    &_initialized
        display block
    &__counter
    &__image-caption
        position absolute
        right 0
        padding 3px 10px 4px
        font-size 14px
        color #fff
        text-align right
        @media phone
            font-size 13px
    &__counter
        top 10px
        background-color rgba(255, 182, 71, .5)
    &__title
        margin-top 2px
        font-size 14px
        color #999
    &__images
    &__thumbs
        padding 0 !important
        list-style none
    &__image
    &__thumb
        &:before
            content none
            display none
    &__image
        position relative
        margin-bottom 4px
        background-color #eee
        fit-image()
        &-caption
            bottom 10px
            background-color rgba(0, 130, 155, .5)
    &__thumb
        width 100%
        height 134px
        fit-image()
        .photo-gallery_simple-thumbs &
            float left
  &__images
        margin-bottom 3px
    &__thumbs
        padding 0 25px !important
        .photo-gallery_simple-thumbs &
            padding 0 !important
        .owl
            &-prev
                left 4px
            &-next
                right 4px


.gallery-popup
    .modal-dialog
        width 720px
    .modal-header
        margin-bottom 10px
    .modal-body
        padding-bottom 5px


    .photo-gallery__thumb
        height 110px

.photo-gallery
	&__thumb
		padding 0 3px

.photo-gallery__thumb
    &:hover
        img
            border-color #9adfd6

.photo-gallery .photo-gallery__thumb_current img
    border-color #9adfd6

.photo-gallery img
    width 100%
    border-radius 5px
    transition border-color .2s ease-in-out
    border 2px solid transparent
