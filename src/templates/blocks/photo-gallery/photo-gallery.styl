.photo-gallery
    position relative
    display none
    margin: 6px
    &_mod
        background-color: #e5f2f5
        border-radius: 3px
        padding: 21px 31px 
        margin: 0 6px 21px 
        .owl
            &-prev
                left -20px
            &-next
                right -20px
        .photo-gallery
            &__thumb
                padding: 0 5px 
                height: auto
                img
                    border: none
                    border-radius: 2px
                &:hover
                    a
                        &:before, &:after
                            visibility: visible
                            opacity: 1
                a
                    display: block
                    position: relative
                    // height: 107px
                    border-radius: 2px
                    overflow: hidden
                    &:before, &:after
                        content: ""
                        position: absolute
                        display: block
                        visibility: hidden
                        opacity: 0
                        transition: visibility 0.3s, opacity 0.3s
                    &:before
                        top: 50%
                        left: 50%
                        margin: -20px 0 0 -20px
                        width: 39px
                        height: 39px
                        background: url("i/icons/zoom.png") no-repeat center center
                        z-index: 2
                    &:after
                        background-color: rgba(#02303a, 0.75)
                        top: 0
                        bottom: 0
                        left: 0
                        right: 0
                        border-radius: 2px
    &_initialized
        display block
    &__counter
    &__image-caption
        position absolute
        right 0
        padding 3px 10px 4px
        font-size 14px
        color #fff
        text-align right
        @media phone
            font-size 13px
    &__counter
        top 10px
        background-color rgba(255, 182, 71, .5)
    &__title
        margin-top 2px
        font-size 14px
        color #999
    &__images
    &__thumbs
        padding 0 !important
        list-style none
    &__image
    &__thumb
        &:before
            content none
            display none
    &__image
        position relative
        margin-bottom 4px
        background-color #eee
        fit-image()
        &-caption
            bottom 10px
            background-color rgba(0, 130, 155, .5)
    &__thumb
        width 100%
        height 138px
        fit-image()
        position: relative
        .photo-gallery_simple-thumbs &
            float left
  &__images
        margin-bottom 3px
    &__thumbs
        padding 0 25px !important
        .photo-gallery_simple-thumbs &
            padding 0 !important
        .owl
            &-prev
                left 4px
            &-next
                right 4px


.gallery-popup
    .modal-dialog
        max-width 740px
        width: 100%
    .modal-header
        margin-bottom 10px
        background: none
        box-shadow: none
        min-height: 35px 
    .modal-body
        padding 0 45px 30px
        @media phone
            padding: 0 25px 25px 
    .photo-gallery
        margin: 0
    .photo-gallery__thumbs
        padding: 0 14px !important 
        .owl-prev, .owl-next
            width: 9px
            height: 19px
            margin-top: -10px
        .owl-prev
            left: 0
            background: url("i/icons/owl-prev.png") no-repeat center center 
        .owl-next
            right: 2px
            background: url("i/icons/owl-next.png") no-repeat center center 
    .photo-gallery__thumb
        height 71px
    .photo-gallery__images
        margin-bottom: 26px
        img
            border: none
        .owl-prev, .owl-next
            bottom: 4px
            top: 0
            height: auto
            width: 48px
            background: rgba(#02303a, 0.75)
            margin: 0
            opacity: 0
            will-change: opacity
            transition: opacity 0.3s
            &:hover
                opacity: 1
            &:before
                content: ""
                position: absolute
                top: 50%
                left: 50%
                margin: -11px 0 0 -5px
                width: 10px
                height: 21px 
                background-position: center center
                background-repeat: no-repeat 
        .owl-prev
            left: 0
            border-radius: 3px 0 0 3px
            &:before
                background-image: url("i/icons/arr-left.png")
        .owl-next
            right: 0
            border-radius: 0 3px 3px 0
            &:before
                background-image: url("i/icons/arr-right.png")
    .photo-gallery__image
        // margin: 0
        border-radius: 3px
        overflow: hidden
    .modal-header
        .close
            width: 25px
            height: 25px
            background: url("i/icons/close.png") no-repeat center center
            top: 14px
            right: 14px
            opacity: 0.49
            outline: none 
            &:hover
                opacity: 0.8
             
