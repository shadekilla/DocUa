.services-block__modifie, .service-mod
	li
		list-style: none !important
.services
	display table
	margin-bottom 64px
	@media only screen and (max-width: 667px)
		display block
	&__tr
		display: table-row
		@media only screen and (max-width: 667px)
			display block
	&__aside
		display: table-cell
		vertical-align top
		background-color: #e9f4f6
		@media only screen and (max-width: 667px)
			display block
			background-color transparent 
		.services-list
			width 289px
			@media only screen and (max-width: 1200px)
				width 200px
			@media only screen and (max-width: 667px)
				display none	
			&__item
				position relative
				border-bottom 1px solid #fff 
				&:first-child
					border-radius: 2px 0px 0px  0px 
				&:last-child
					border-radius: 0px 0px 0px 2px
				&.is-active, &:hover
					background-color: #35bfae
					cursor pointer
					&:after
						content ""
						position absolute
						right -6px
						top 50%
						margin-top -6px  
						width 0
						height 0 
						border-top: 7px solid transparent
						border-left: 7px solid #35bfae
						border-bottom: 7px solid transparent
					.services-list__link
						color #FFF 
					
			&__link
				color: blue_link
				font-size: 18px
				font-weight: 700
				text-decoration none
				line-height 39px
				padding-left 21px  
				-webkit-transition color, .2s 
				-moz-transition color, .2s 
				-ms-transition color, .2s 
				-o-transition color, .2s 
				transition color, .2s
				@media only screen and (max-width: 1200px)
					font-size 16px 
					display inline-block
				@media only screen and (max-width: 767px)
					line-height normal
					padding 5px 10px 
		.services-list-mobile
			display none
			.dropdown
				@media only screen and (max-width: 460px)
					padding 15px 0
				&__title
					display inline-block
					padding-right 20px 
					line-height 55px
					@media only screen and (max-width: 460px)
						line-height: normal
				&__btn
					position relative
					display inline-block
					font-size 14px
					border 1px solid rgba(129, 169, 177, 0.7)
					border-radius 2px
					box-shadow: 0 2px 4px rgba(0, 64, 76, 0.08)
					width 280px
					padding 5px 15px
					color #77969c
					text-decoration none
					outline none
					@media only screen and (max-width: 460px)
						margin-top 5px
					@media only screen and (max-width: 350px)
						width 100%
					&:focus
						text-decoration none
						color #77969c
					&:hover
						border-color green_base
						color green_base
					&:after
						content ''
						position absolute
						right 15px
						top 45%
						display block
						width 0
						height 0
						border 5px solid transparent 
						border-top 5px solid #77969c
					.btn__close
						display none
						margin 0 0 -3px 20px 
						cursor: pointer
						width: 12px
						height: 12px
						background url('i/icons/action-close.png')  no-repeat
					.is-active
						display inline-block
			@media only screen and (max-width: 667px)
				display block
				margin-bottom 10px
				background-color: #fff
				border-radius: 2px
				font-size: 16px
				padding: 0 20px
	&__content
		display: table-cell
		vertical-align top
		background #FFF 
		width 100% 
		padding 20px 21px 21px 31px 
		@media only screen and (max-width: 667px)
			display block
			padding 10px 11px 11px 21px 
	.services-about
		&__caption
			color: #4b89d3
			font-size: 24px
			font-weight: 700
			@media only screen and (max-width: 650px)
				font-size 20px
			&.services-about__caption-item
				color text_color 
		.services-line
			width 100%
			height 1px
			background-color: #dde7e9
			margin 21px 0 
			@media only screen and (max-width: 650px)
				margin 11px 0 
		// &__text
		.text-list
			&.columnize
				.text-list__item
					margin-right 15px
					@media only screen and (max-width: 940px)
						margin-right 5px	
			&.text-list_modifie
				.text-list__item	
					.description
						&__item
							.item__left
								@media only screen and (max-width: 480px)
									width 70% 
								@media only screen and (max-width: 480px)
									width 65% 
							.item__right
								@media only screen and (max-width: 480px)
									width 30% 
								@media only screen and (max-width: 480px)
									width 35% 
			&__item
				margin-bottom 40px
				padding-right 20px
				@media only screen and (max-width: 650px)
					padding-right 10px
					margin-bottom 20px
				.description
					&__item
						position relative
						margin-bottom 10px
						@media only screen and (max-width: 650px)
							margin-bottom 5px
						&:before	
							content ""
							position absolute
							bottom 4px 
							right 0
							width 100%
							height 1px
							background url("i/dotts.png") repeat
						.item-wrap
							display flex
							flex-flow: row wrap
							align-items: flex-end
							justify-content: space-between  
						&.item-wrap
							&:before
								display none
						&.heading
							margin-bottom 7px
							&:before
								display none
							.description__link
								color: #4b89d3
								font-size: 18px
								font-weight: 700
								text-decoration underline
								&:hover
									text-decoration none
						.item__left
							position relative
							padding-right 3px 
							text-align left
							width 70% 
							@media only screen and (max-width: 480px)
								width 65% 
							@media only screen and (max-width: 930px)
								width 60% 
							@media only screen and (max-width: 667px)
								width 70% 
						.item__right
							position relative
							text-align right 
							padding-left 2px
							width 30%
							span
								background #FFF 
							@media only screen and (max-width: 480px)
								width 35%  
							@media only screen and (max-width: 930px)
								width 40% 
							@media only screen and (max-width: 667px)
								width 30%
					&__link
						color: #4b89d3
						font-size: 15px
						font-weight: 400
						line-height 22px  
						background #FFF 
						text-decoration underline
						&:hover
							text-decoration none
					.list-in 
						width 100%
						&__title
							color: #4b89d3
							font-size: 15px
							font-weight: 400
							display inline-block
							margin-bottom 10px 
							text-decoration underline
								&:hover
									text-decoration none
						.description__item
							margin-left 31px
							@media only screen and (max-width: 650px)
								margin-left 16px
						.item__left
							@media only screen and (max-width: 385px)
								width 148px
// service-about
.services-block
	background-color: white
	border-radius: 2px
	box-shadow: 0 2px 4px rgba(0, 64, 76, 0.15)
	margin-bottom 40px
	&__in
		padding 17px 39px 50px 40px 
		@media only screen and (max-width: 560px)
			padding 10px 20px 35px 20px 
	&__search
		.select7__current-value
			color: #4b89d3
		p
			color: $text_color
			font-size: 24px
			font-weight: 700 
		
		.select7__drop
			top 70%
		.services-direction
			@media only screen and (max-width: 1150px)
				padding 10px 20px
			.direction__title
				padding-right 6px
			.services-btn
				position: relative
				display: inline-block
				&__go
					width: 235px
					height: 31px
					background-color: #fff
					border: 1px solid #a6c2c8
					border-radius: 2px
					font-size: 14px 
					padding 5px 25px 5px 15px 
					overflow hidden
					text-overflow: ellipsis
					white-space: nowrap
					-webkit-appearance: none
					box-shadow: none
					-webkit-box-shadow: none
					-webkit-appearance: none
					&:input-placeholder 
						color: #91b5bc
				&__icon
					position absolute
					right 10px
					top 50%
					margin-top -11px  
					width 16px
					height 21px
					background url("i/location_small.png") no-repeat 
					&:hover
						cursor pointer
			.direction__left
				@media only screen and (max-width: 1150px)
					float none
					.direction__title
						line-height 31px 
				@media only screen and (max-width: 990px)
					float left
				@media only screen and (max-width: 850px)
					float none
			.direction__right
				@media only screen and (max-width: 1150px)
					float none
					line-height 28px 
				@media only screen and (max-width: 990px)
					float right
				@media only screen and (max-width: 850px)
					float none
					line-height 20px 
					margin-top 5px
					
	.services_about-mod
		display block
		margin 30px 0 0 0 
		.services-about
			.text-list
				.description__link
					text-decoration none
		@media only screen and (max-width: 560px)
			margin-top 15px
		.text-list__item
			padding-right 0
.services-about-this
	background-color: #e5f2f5
	border-radius: 4px
	padding 30px
	font-size 15px
	line-height 22px

.services-card-list
	.small-card
		padding 9px 0 0 
		box-sizing: content-box
		// border 1px solid transparent 
		border none !important
		outline: 1px solid transparent
		&:hover
			outline: 1px solid green_base
		.small-card__image
			@media only screen and (max-width: 480px)
				width 77px
		.small-card__right-side
			@media only screen and (max-width: 767px)
				margin-left 180px
				.small-card__address, .small-card__location
					line-height 22px
			@media only screen and (max-width: 560px)
				margin-left 20px
			.small-card__footer
				@media only screen and (max-width: 640px)
					margin-top -10px
					 
	.small-card__title
		margin-bottom 20px
		@media only screen and (max-width: 767px)
			margin-bottom 10px
	.address-info
		font-size 12px
	.small-card__schedule
		&:after
			display none	
	.block-services-wrapper
		margin-top 30px								

						
									
				