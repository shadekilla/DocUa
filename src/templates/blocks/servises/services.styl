.services
	&__aside
		vertical-align top
		background-color: #e9f4f6
		.services-list
			width 289px
			@media only screen and (max-width: 1200px)
				width 200px
				
			&__item
				position relative
				border-bottom 1px solid #fff 
				&:first-child
					border-radius: 2px 0px 0px  0px 
				&:last-child
					border-radius: 0px 0px 0px 2px
				&.is-active, &:hover
					background-color: #35bfae
					cursor pointer
					&:after
						content ""
						position absolute
						right -6px
						top 50%
						margin-top -6px  
						width 0
						height 0 
						border-top: 6px solid transparent
						border-left: 6px solid #35bfae
						border-bottom: 6px solid transparent
					.services-list__link
						color #FFF 
					
			&__link
				color: blue_link
				font-size: 18px
				font-weight: 700
				text-decoration none
				line-height 39px
				padding-left 21px  
				-webkit-transition color, .2s 
				-moz-transition color, .2s 
				-ms-transition color, .2s 
				-o-transition color, .2s 
				transition color, .2s
				@media only screen and (max-width: 1200px)
					font-size 16px 
					display inline-block
				@media only screen and (max-width: 767px)
					line-height normal
					padding 5px 10px 
	&__content
		vertical-align top
		background #FFF 
		width 100% 
		padding 20px 21px 21px 31px 
		.services-about
			&__caption
				color: #4b89d3
				font-size: 24px
				font-weight: 700
			.services-line
				width 100%
				height 1px
				background-color: #dde7e9
				margin 21px 0 
			&__text
				.text-list
					-webkit-columns 2 
					-moz-columns 2 
					columns 2 
					-webkit-column-gap 27px 
					-moz-column-gap 27px 
					column-gap 27px 
					@media only screen and (max-width: 960px)
						-webkit-columns auto 
						-moz-columns auto 
						columns auto 
					&__item
						margin-bottom 40px
						padding-right 20px
						.description
							&__item
								position relative
								margin-bottom 10px
								clearfix()
								// overflow hidden 
								&:before	
									content ""
									position absolute
									top 79% 
									width 100%
									height 1px
									background url("i/dotts.png") repeat
								
								&.heading
									&:before
										display none
									.description__link
										color: #4b89d3
										font-size: 18px
										font-weight: 700
										text-decoration: underline
										&:hover
											text-decoration none
										
								.item__left
									float left
									position relative
									background #FFF
									padding-right 3px 
									// margin-right 30px
								.item__right
									position relative
									float right
									position relative
									background #FFF 
									padding-left 2px
									
							&__link
								color: #4b89d3
								font-size: 15px
								font-weight: 400
								
							.list-in 
								a
									color: #4b89d3
									font-size: 15px
									font-weight: 400
								.description__link
									padding-left 31px
									
									
									
				