.services
	display table
	@media only screen and (max-width: 650px)
		display block
	&__tr
		display: table-row
		@media only screen and (max-width: 650px)
			display block
	&__aside
		display: table-cell
		vertical-align top
		background-color: #e9f4f6
		@media only screen and (max-width: 650px)
			display block
			background-color transparent 
		.services-list
			width 289px
			@media only screen and (max-width: 1200px)
				width 200px
			@media only screen and (max-width: 650px)
				display none	
			&__item
				position relative
				border-bottom 1px solid #fff 
				&:first-child
					border-radius: 2px 0px 0px  0px 
				&:last-child
					border-radius: 0px 0px 0px 2px
				&.is-active, &:hover
					background-color: #35bfae
					cursor pointer
					&:after
						content ""
						position absolute
						right -6px
						top 50%
						margin-top -6px  
						width 0
						height 0 
						border-top: 6px solid transparent
						border-left: 6px solid #35bfae
						border-bottom: 6px solid transparent
					.services-list__link
						color #FFF 
					
			&__link
				color: blue_link
				font-size: 18px
				font-weight: 700
				text-decoration none
				line-height 39px
				padding-left 21px  
				-webkit-transition color, .2s 
				-moz-transition color, .2s 
				-ms-transition color, .2s 
				-o-transition color, .2s 
				transition color, .2s
				@media only screen and (max-width: 1200px)
					font-size 16px 
					display inline-block
				@media only screen and (max-width: 767px)
					line-height normal
					padding 5px 10px 
		.services-list-mobile
			display none
			@media only screen and (max-width: 650px)
				display block
				margin-bottom 10px
				.dropdown-menu
					&__link
						color: blue_link
						
						
	&__content
		display: table-cell
		vertical-align top
		background #FFF 
		width 100% 
		padding 20px 21px 21px 31px 
		@media only screen and (max-width: 650px)
			display block
			padding 10px 11px 11px 21px 
		.services-about
			&__caption
				color: #4b89d3
				font-size: 24px
				font-weight: 700
				@media only screen and (max-width: 650px)
					font-size 20px
			.services-line
				width 100%
				height 1px
				background-color: #dde7e9
				margin 21px 0 
				@media only screen and (max-width: 650px)
					margin 11px 0 
			&__text
				.text-list
					-webkit-columns 2 
					-moz-columns 2 
					columns 2 
					-webkit-column-gap 27px 
					-moz-column-gap 27px 
					column-gap 27px 
					@media only screen and (max-width: 960px)
						-webkit-columns auto 
						-moz-columns auto 
						columns auto 
					&.text-list_modifie
						-webkit-columns 1 
						-moz-columns 1 
						columns 1 
					&__item
						margin-bottom 40px
						padding-right 20px
						@media only screen and (max-width: 650px)
							padding-right 10px
							margin-bottom 20px
						.description
							&__item
								position relative
								margin-bottom 10px
								
								
								@media only screen and (max-width: 650px)
									margin-bottom 5px
								&:before	
									content ""
									position absolute
									bottom 3px 
									right 0
									width 100%
									height 1px
									background url("i/dotts.png") repeat
								.item-wrap
									display flex
									flex-flow: row wrap
									align-items: flex-end
									justify-content: space-between  
								
								&.item-wrap
									&:before
										display none
								
								&.heading
									&:before
										display none
									.description__link
										color: #4b89d3
										font-size: 18px
										font-weight: 700
										text-decoration: underline
										&:hover
											text-decoration none
										
								.item__left
									position relative
									padding-right 3px 
									text-align left
									width 280px
									@media only screen and (max-width: 1200px)
										width 240px
									@media only screen and (max-width: 1048px)
										width 200px
									@media only screen and (max-width: 650px)
										float none
										display block
									@media only screen and (max-width: 374px)
										width 163px
									
								.item__right
									position relative
									background #FFF 
									text-align right 
									padding-left 2px
							&__link
								color: #4b89d3
								font-size: 15px
								font-weight: 400
								background #FFF 
							.list-in 
								width 100%
								&__title
									color: #4b89d3
									font-size: 15px
									font-weight: 400
									display inline-block
									margin-bottom 10px
								.description__item
									margin-left 31px
									@media only screen and (max-width: 650px)
										margin-left 16px
								.item__left
									@media only screen and (max-width: 385px)
										width 148px
									
									
									
				