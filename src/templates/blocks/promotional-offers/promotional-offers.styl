.promotional-offers
	display block
	width 100%
	&.promotional-offers_action
		.offers 
			&__item
				// .offers-wrap
				// 	padding 12px 21px
				.heading
					&__left
						// width 45%
						// @media only screen and (max-width: 1200px)
						// 	// width 40%
						// 	min-height 57px
						@media screen560
							width 100%
							min-height auto
						
	&__title
		background-color #e5f2f5
		line-height 51px
		padding 0 20px 0 39px 
		font-size 15px
	.offers
		position relative
		& + .load-more.load-more_cla
			margin-top: -1px
		&__item
			background #FFF
			border-bottom 1px solid #dde8ea
			// &:first-child
			// 	border-top none
			&:last-child
				// border-color transparent 
				// border-radius 0 0 3px 3px
				&:hover
					border-color #e5f2f5
					
			&.is-active
				background-color #f3f8fb
				outline 1px solid green_base
				margin: 1px
			.offers-wrap
				padding 15px 20px 15px 39px
				// &:hover .offers__item
				// 	border-top-color: #fff
				@media only screen and (max-width: 640px)
					padding 15px 21px
				&:hover
					background-color: #f3f8fb
					cursor pointer
				&:hover .percent 
					display none !important
				&:hover .price-discount
					display none !important
					@media screen560
						display inline-block !important
						vertical-align middle
				&:hover .btn-hidden
					// vertical-align: top
					display inline-block !important
					@media only screen and (max-width: 560px)
						display block !important
				&:hover .fillials
					@media only screen and (max-width: 760px)
						text-decoration none
			.heading
				clearfix()
				&__left
					float left
					width 50%
					min-height 27px 
					@media only screen and (max-width: 1200px)
						width 35%
					@media only screen and (max-width: 620px)
						width 40%
					@media only screen and (max-width: 760px)
						min-height 55px
					@media screen560
						float none
						width auto
						min-height 27px
					.names
						font-size 15px
						color text_color
						padding: 3px 0
						span 
							color: #90b1b8
					
				&__right
					float right
					text-align left
					font-size: 0
					@media screen560
						float none
						min-height: 62px
						margin-top: 5px
						padding: 0
					.fillials
						position relative
						display inline-block
						vertical-align: middle
						margin-right 20px
						padding-left 23px
						transform: translate3d(0,0,0)
						color: text_color
						font-size: 14px
						line-height 26px
						@media only screen and (max-width: 640px)
							display: none
						&:before
							content ""
							position absolute
							left 0
							top 50%
							margin-top -9px
							sprite($location)
					.percent 
						display inline-block
						vertical-align middle
						font-size: 15px
						color text_color
						margin-right 5px 
						width 35px
						@media only screen and (max-width: 1100px)
							margin-right 5px
						@media only screen and (max-width: 580px)
							margin-right 2px
						@media screen560
							display none !important
					.price-discount
						display inline-block
						vertical-align: middle
						width 160px
						text-align right
						clearfix()
						// @media only screen and (max-width: 580px)
						// 	width 131px
						@media screen560
							vertical-align middle
						@media only screen and (max-width: 560px)
							text-align: left
						.old-price
							float: left
							width: 48%
							color: #91b5bc
							font-size: 13px
							line-height: 22px
							text-decoration: line-through
							@media only screen and (max-width: 580px)
								font-size 12px
						.new-price
							float: right
							width: 52%
							padding-left: 3px
							color: #5e6e71
							font-size: 16px
							@media only screen and (max-width: 1100px)
								font-size 15px
					.btn
						display inline-block
						vertical-align middle
						width: 200px
						margin -4px 0 -4px 0px
						padding 3px 7px 
						color: #feffff
						font-size 16px 
						font-weight 400
						@media only screen and (max-width: 760px)
							// margin 5px 0 0 0
						@media screen560
							margin 5px 0 0 0  
						&.btn-hidden
							display none
						@media only screen and (max-width: 1100px)
							margin -3px 0 0 0px
							font-size 15px
						@media screen560
							display block !important
.btn-group
	&__icon
		position relative
		display inline-block
		vertical-align middle
		margin-top 2px
		width 9px
		height 7px
		height 1px
		background-color #4b89d3 
		&:before, &:after
			content ""
			position absolute
			width 100%
			height 1px
			background-color #4b89d3 
		&:before
			top 3px
		&:after
			bottom 3px
	a
		margin-left 7px
		color: #4b89d3
		font-size: 13px
		vertical-align middle
						
.hide-content
	display none
	background #FFF 
	-webkit-border-radius 0 0 3px 3px  
	border-radius 0 0 3px 3px  
	padding 28px 21px 19px 55px 
	.analysis-list
		columns 2 
		column-gap: 60px
		@media screen560
			columns 1
		clearfix()
		&__item
			// float left
			// display inline-block
			// vertical-align top
			width 100%
			display: inline-table
			margin-bottom 12px
			padding-right 20px
			span 
				color: #73868a
	&.hide-content_modifie
		border-top 2px solid #35bfae
		border-bottom 2px solid #35bfae
							
.offers-color
	padding: 25px 30px
	border-radius: 4px
	margin: 10px 0	
	background-color: #fff9e9
	span
		position relative
		color: #5e6e71
		font-size: 14px
		padding-left 25px
		&:before
			content ""	
			position absolute
			left 0
			top -2px
			sprite($i-color) 
			width 21px
			height 21px			
				