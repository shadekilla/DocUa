.more-toggle
    display none
    cursor pointer
    position absolute
    bottom 0
    left 0
    height 5px
    width 100%
    background-color #fff
    border-radius 0 0 border_radius_sm border_radius_sm
    text-align center
    transition border-color 0.2s ease, box-shadow 0.2s ease
    
    &__link
        position relative
        top 5px
        display inline-block
        padding 0 30px 0 20px
        background-color #fff
        border-radius 0 0 border_radius_sm border_radius_sm
        text-decoration none
        transition: border-color .2s ease,box-shadow .2s ease
        .more-toggle_with-icon &
            padding-right 15px
        &:hover
            .more-toggle__hide-label>span, 
            .more-toggle__show-label>span
                border-bottom: none
        @media phone
            width 100% 
    &__show-label 
    &__hide-label
        position relative
        top -8px
        > span
            display inline-block
            border-bottom 1px dotted
            line-height 14px
    &__show-label
        position relative
        display inline-block
        .show-hidden-small-cards &
            display none
        .more-toggle_with-icon &
            padding-right 27px
        
        &:after
            content ''
            position absolute
    &__hide-label
        display none
        .show-hidden-small-cards &
            display inline-block

.more-toogle-parent
    position relative
    @media phone
        padding-bottom 70px  
    .more-toggle
        bottom 20px
        position relative
        display inline-block
        margin-top 20px
        font-size 14px
        left 0
        right 0
        height 50px
        background 0 0
        @media phone
            bottom 0 

.has-hidden-small-cards
    margin-bottom 32px !important
    .more-toggle
        display block

