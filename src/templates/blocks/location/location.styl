.location
    display inline-block
    padding-left 5px  
    font-size 16px
    color #00829b
    line-height 1 
    // @media phone
    //     // font-size 18px
    //     // margin-left -15px 
    .select7
        min-width 0
        &__drop
            margin -32px 0 0
            padding 34px 0 7px 
            font-size 16px
            background-color: white
            border: 1px solid #ccc
            border-radius: 0
            box-shadow: 0 3px 3px rgba(0, 0, 0, 0.25)
            width 190px
            @media phone
                font-size 14px
        &__drop-list
            max-height 200px
            overflow hidden 
                 
        &__current-value 
            color: #00829b
            font-size: 16px
            transition all .2s ease-in-out
            @media phone 
                font-size 14px
            // &:hover
            //     color #0099a8
        &.select7_open
            .select7__current-value 
                color: #5e6e71
                border-color transparent
            .select7__caret
                border-color transparent transparent #00829b !important
        &.select7_city
            .select7__current
                padding 1px 20px 2px 20px
                // @media phone
                //     padding 5px 15px
        &__option
            padding 1px 10px 2px 20px
            transition all .2s ease-in-out
            color: #5e6e71  
            // @media phone
            //     padding 5px 15px 5px 15px 
            &:hover
                background #c7dfe5
    .select7.disabled
        .select7__current-value
            border-color transparent

