.location
    display inline-block
    padding-left 5px  
    font-size 16px
    color #00829b
    @media phone
        // font-size 18px
        margin-left -15px 
    .select7
        min-width 0
        &__drop
            margin -32px 0 0
            padding 34px 0 7px 
            font-size 16px
            @media phone
                font-size 14px
                 
        &__current-value
            color #00829b 
            @media phone 
                font-size 14px
            &:hover
                color #0099a8
        &.select7_open
            .select7__current-value
                color #0099a8
                border-color transparent
            .select7__caret
                border-color transparent transparent #00829b !important
        &.select7_city
            .select7__current
                padding 0 20px 0 26px
        &__option
            padding 5px 20px 5px 24px
            transition all .2s ease-in-out
            &:hover
                background #deeff2 
    .select7.disabled
        .select7__current-value
            border-color transparent

