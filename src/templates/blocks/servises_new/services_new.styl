.services
	padding 10px 20px
	background-color #FFF
	border-radius: 2px
	box-shadow: 0 1px 2px rgba(0, 0, 0, 0.25)
	&__title
		color: #5e6e71
		font-family: "PT Sans"
		font-size: 28px
		font-weight: 400
		line-height 1.6
	&__in
		.row
			font-size 0
		.col-md-3
			display inline-block
			vertical-align top
			float none
			@media only screen and (max-width: 1000px)
				width 50%
			@media only screen and (max-width: 560px)
				width 100%
	&__col
		padding 10px 0
		color: #4b89d3
		font-family: "PT Sans"
		font-weight: 400
		font-size: 16px
	&__caption
		display block
		border-bottom 1px solid #d9d9d9
		&:hover
			a
				text-decoration underline
		a 
			text-decoration none
			color: #4b89d3
			font-size: 20px
	&__item
		padding-top 5px
		&:hover
			a
				text-decoration underline
		a
			text-decoration none
			color: #4b89d3
			font-family: "PT Sans"
			font-weight: 400
			font-size: 16px
			line-height 1.35
			cursor pointer
	&__link-more
		position relative
		text-decoration none
		border-bottom 1px dotted #4b89d3 
		color: #4b89d3
		font-size: 12px
		&:after
			content ""
			position absolute
			top 50%
			right -15px
			margin-top -1px
			arr(7, 4, b, #4b89d3)
			transition transform 300ms
			// border-style: solid
			// border-width: 4px 3.5px 0 3.5px
			// border-color: #4b89d3 transparent transparent transparent 
		&:hover
			border none
		&.is-open
		// 	display none
			&:after
				transform rotate(180deg)
	&__items-more
		display none
		&.is-open
			display block
			
// &.services-block_new
.services-block	
	margin-bottom 15px
	.services-block__in
		padding 20px
		h1
			color: #5e6e71
			font-family: "PT Sans"
			font-size: 28px
			font-weight: 400
		.services_about-mod
			margin-top 15px
		.services_about-contents
			display block
			margin 0
			padding-bottom 5px
	.services-about
		.description
			padding-top 15px
			&__item
				margin 0 0 5px 15px
				color: #5e6e71
				font-family: "PT Sans"
				font-size: 16px
				font-weight: 400
				&:before
					bottom 6px
				&.heading
					margin 0 0 5px 0
				&.single
					margin 0 0 3px 0
				&.subheading
					&:before
						display none
			&__title
				color: #4b89d3
				font-size: 20px
			&__subtitle
				margin-bottom 5px
				color: #4b89d3
			&__link
				color: #4b89d3
				font-size: 16px
			// &__list-in
			// 	margin-left 15px
		.text-list
			&__item
				margin-bottom 5px
				&.last-child
					margin-bottom 0
	.services-block__search
		.direction
			background-color: #fafafa
			box-shadow none !important
			border-top 1px solid #d9d9d9
			border-radius 0
			margin-bottom 0px
				
.services-text
	position relative
	margin 0 0 25px
	&.is-open
		margin 0 0 15px
	&__block
		height 80px
		overflow hidden
		transition: height 300ms, overflow 300ms
		&:after
			content "" 
			position absolute
			bottom 0
			left 0
			right 0
			width 100% 
			height 20px
			background: linear-gradient(to top,#fff 0,rgba(255,255,255,0) 100%)
		&.is-open
			height 100%
			overflow visible 
	&__in
		position relative
		color: #5e6e71
		font-size: 16px
		font-family: "PT Sans"
		font-weight: 400
		h2
			margin-bottom 17px
			color: #5e6e71
			font-size: 20px
		p
			margin-bottom 17px
			line-height 1.3
		ul
			padding 5px 0 20px
			li
				position relative
				padding-left 15px
				line-height 1.2
				list-style-type none
				&:before
					content ""
					position absolute
					top 50%
					left 0
					width 4px
					height 4px
					margin-top -2px
					border-radius 50%
					background-color #5E6E71 
	&__btn
		position absolute
		bottom -25px
		right 0
		padding-right 15px
		cursor pointer
		color: #4b89d3
		font-size: 16px
		line-height 1
		&:after
			content "" 
			position absolute
			top 50%
			right 0
			margin-top -2px
			// width 9px
			// height 5px 
			// background-image: url('i/s-more.png')
			transition: transform 300ms
			sprite($s-more)  
		&.is-open
			bottom -12px
			&:after
				transform: rotate(180deg)
				

.services-new-subtitle
	margin 30px 0 15px
	color: #5e6e71
	font-size: 24px
	font-weight: 400
	
.services-new-card-list
	.block-services-wrapper
		margin-top 0
	.small-card
		padding 0 !important
		margin-bottom 15px
		&__wrap
			padding 10px 0 18px
		&__title
			a
				&:hover
					text-decoration underline

.widget
	&.widget-similar-diseases-new
		margin-bottom 30px
		.h3
			margin 0
			padding 15px 15px 13px 19px
			text-align left
			color: #5e6e71
			font-family: "PT Sans"
			font-size: 20px
			font-weight: 400
			line-height 1.2
		.diseases-body
			padding 11px 15px 17px
			border-top 1px solid #D9D9D9 
		.diseases-item
			margin 0
			padding-left 17px
			line-height 1.4
			.diseases-link
				text-decoration none
				&:before
					width 6px
					height 6px
					background-color: #94b7be
				&:hover
					text-decoration underline


